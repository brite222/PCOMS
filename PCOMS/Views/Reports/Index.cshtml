@model IEnumerable<PCOMS.Application.Interfaces.DTOs.ReportListDto>

@{
    ViewData["Title"] = "Saved Reports";
    var filter = ViewBag.Filter as PCOMS.Application.Interfaces.DTOs.ReportFilterDto;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-archive"></i> Saved Reports</h2>
            <p class="text-muted">View and manage previously generated reports</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Dashboard")" class="btn btn-primary">
                <i class="bi bi-graph-up"></i> Generate New Report
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="row mb-3">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Report Type</label>
                            <select name="Type" class="form-select">
                                <option value="">All Types</option>
                                <option value="Financial" selected="@(filter?.Type == "Financial" ? "selected" : null)">Financial</option>
                                <option value="Productivity" selected="@(filter?.Type == "Productivity" ? "selected" : null)">Productivity</option>
                                <option value="Time" selected="@(filter?.Type == "Time" ? "selected" : null)">Time Entry</option>
                                <option value="Project" selected="@(filter?.Type == "Project" ? "selected" : null)">Project Status</option>
                                <option value="Client" selected="@(filter?.Type == "Client" ? "selected" : null)">Client</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">From Date</label>
                            <input type="date" name="FromDate" class="form-control" value="@filter?.FromDate?.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">To Date</label>
                            <input type="date" name="ToDate" class="form-control" value="@filter?.ToDate?.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-funnel"></i> Filter
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                Clear
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Reports Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Report Name</th>
                                <th>Type</th>
                                <th>Generated By</th>
                                <th>Generated At</th>
                                <th>Date Range</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var report in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@report.Name</strong>
                                        @if (!string.IsNullOrEmpty(report.Description))
                                        {
                                            <br />
                                
                                            <small class="text-muted">@report.Description</small>
                                        }
                                    </td>
                                    <td>
                                        @{
                                            var badgeClass = report.Type switch
                                            {
                                                "Financial" => "bg-success",
                                                "Productivity" => "bg-primary",
                                                "Time" => "bg-info",
                                                "Project" => "bg-warning",
                                                "Client" => "bg-secondary",
                                                _ => "bg-dark"
                                            };
                                        }
                                        <span class="badge @badgeClass">@report.Type</span>
                                    </td>
                                    <td>@report.GeneratedByName</td>
                                    <td>@report.GeneratedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (report.StartDate.HasValue && report.EndDate.HasValue)
                                        {
                                            <small>
                                                @report.StartDate.Value.ToString("MMM dd, yyyy") -
                                                @report.EndDate.Value.ToString("MMM dd, yyyy")
                                            </small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Details", new { id = report.Id })"
                                               class="btn btn-outline-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                            {
                                                <form asp-action="Delete" method="post" class="d-inline"
                                                      onsubmit="return confirm('Are you sure you want to delete this report?');">
                                                    <input type="hidden" name="id" value="@report.Id" />
                                                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    No saved reports found. <a href="@Url.Action("Dashboard")" class="alert-link">Generate your first report</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any client-side JavaScript here
    </script>
}
