@model PCOMS.Application.Interfaces.DTOs.GenerateReportDto

@{
    ViewData["Title"] = "Generate Financial Report";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-currency-dollar"></i> Generate Financial Report</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Financial" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Report Name</label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Q1 2025 Financial Report" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StartDate" class="form-label">Start Date *</label>
                                <input asp-for="StartDate" type="date" class="form-control" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="EndDate" class="form-label">End Date *</label>
                                <input asp-for="EndDate" type="date" class="form-control" required />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClientId" class="form-label">Filter by Client (Optional)</label>
                            <select asp-for="ClientId" class="form-select">
                                <option value="">All Clients</option>
                                <!-- Add client options from ViewBag if needed -->
                            </select>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional notes about this report..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Dashboard")" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-graph-up"></i> Generate Report
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Quick Presets -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-lightning"></i> Quick Presets</h6>
                </div>
                <div class="card-body">
                    <button class="btn btn-sm btn-outline-primary me-2" onclick="setCurrentMonth()">Current Month</button>
                    <button class="btn btn-sm btn-outline-primary me-2" onclick="setLastMonth()">Last Month</button>
                    <button class="btn btn-sm btn-outline-primary me-2" onclick="setQuarter()">Current Quarter</button>
                    <button class="btn btn-sm btn-outline-primary" onclick="setYear()">Year to Date</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function setCurrentMonth() {
            const now = new Date();
            const start = new Date(now.getFullYear(), now.getMonth(), 1);
            document.querySelector('[name="StartDate"]').valueAsDate = start;
            document.querySelector('[name="EndDate"]').valueAsDate = now;
        }

        function setLastMonth() {
            const now = new Date();
            const start = new Date(now.getFullYear(), now.getMonth() - 1, 1);
            const end = new Date(now.getFullYear(), now.getMonth(), 0);
            document.querySelector('[name="StartDate"]').valueAsDate = start;
            document.querySelector('[name="EndDate"]').valueAsDate = end;
        }

        function setQuarter() {
            const now = new Date();
            const quarter = Math.floor(now.getMonth() / 3);
            const start = new Date(now.getFullYear(), quarter * 3, 1);
            document.querySelector('[name="StartDate"]').valueAsDate = start;
            document.querySelector('[name="EndDate"]').valueAsDate = now;
        }

        function setYear() {
            const now = new Date();
            const start = new Date(now.getFullYear(), 0, 1);
            document.querySelector('[name="StartDate"]').valueAsDate = start;
            document.querySelector('[name="EndDate"]').valueAsDate = now;
        }
    </script>
}
