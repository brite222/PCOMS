@model PCOMS.Application.DTOs.InvoiceDto

@{
    ViewData["Title"] = $"Invoice {Model.InvoiceNumber}";
    var statusClass = Model.Status switch
    {
        "Paid" => "bg-success",
        "PartiallyPaid" => "bg-info",
        "Overdue" => "bg-danger",
        "Sent" => "bg-primary",
        "Viewed" => "bg-primary",
        _ => "bg-secondary"
    };
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                Invoice @Model.InvoiceNumber
                <span class="badge @statusClass ms-2">@Model.Status</span>
            </h2>
            <p class="text-muted">Project: @Model.ProjectName</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="MyInvoices" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Invoices
            </a>
            <button onclick="window.print()" class="btn btn-outline-primary">
                <i class="bi bi-printer"></i> Print
            </button>
        </div>
    </div>

    <div class="row">
        <!-- Left: Invoice Details -->
        <div class="col-lg-8">
            <div class="card mb-3">
                <div class="card-body">
                    <!-- Company & Client Info -->
                    <div class="row mb-4">
                        <div class="col-6">
                            <h5>From:</h5>
                            <p class="mb-0">
                                <strong>Your Company Name</strong><br />
                                Address Line 1<br />
                                Address Line 2<br />
                                Phone: (xxx) xxx-xxxx
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <h5>Bill To:</h5>
                            <p class="mb-0">
                                <strong>@Model.ClientName</strong>
                            </p>
                        </div>
                    </div>

                    <!-- Invoice Info -->
                    <div class="row mb-4">
                        <div class="col-6">
                            <dl>
                                <dt>Invoice Date:</dt>
                                <dd>@Model.InvoiceDate.ToString("MMMM dd, yyyy")</dd>

                                <dt>Due Date:</dt>
                                <dd>
                                    @Model.DueDate.ToString("MMMM dd, yyyy")
                                    @if (Model.IsOverdue)
                                    {
                                        <br />
                                        <span class="badge bg-danger">
                                            @Model.DaysOverdue days overdue
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-6 text-end">
                            <dl>
                                <dt>Invoice Number:</dt>
                                <dd><strong>@Model.InvoiceNumber</strong></dd>

                                <dt>Project:</dt>
                                <dd>@Model.ProjectName</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Line Items -->
                    <div class="table-responsive mb-4">
                        <table class="table">
                            <thead class="table-light">
                                <tr>
                                    <th>Description</th>
                                    <th class="text-end">Qty</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.InvoiceItems)
                                {
                                    <tr>
                                        <td>@item.Description</td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">₦@item.UnitPrice.ToString("N2")</td>
                                        <td class="text-end">₦@item.Amount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Subtotal:</th>
                                    <th class="text-end">₦@Model.Subtotal.ToString("N2")</th>
                                </tr>
                                @if (Model.TaxAmount > 0)
                                {
                                    <tr>
                                        <th colspan="3" class="text-end">Tax (@Model.TaxRate%):</th>
                                        <th class="text-end">₦@Model.TaxAmount.ToString("N2")</th>
                                    </tr>
                                }
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <th colspan="3" class="text-end">Discount:</th>
                                        <th class="text-end text-success">-₦@Model.DiscountAmount.ToString("N2")</th>
                                    </tr>
                                }
                                <tr class="table-primary">
                                    <th colspan="3" class="text-end"><h5 class="mb-0">TOTAL DUE:</h5></th>
                                    <th class="text-end"><h5 class="mb-0">₦@Model.TotalAmount.ToString("N2")</h5></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Notes & Terms -->
                    @if (!string.IsNullOrEmpty(Model.Notes) || !string.IsNullOrEmpty(Model.Terms))
                    {
                        <div class="border-top pt-3">
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <h6>Notes:</h6>
                                <p>@Model.Notes</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Terms))
                            {
                                <h6>Terms & Conditions:</h6>
                                <p class="small text-muted">@Model.Terms</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right: Payment Summary -->
        <div class="col-lg-4">
            <!-- Payment Status -->
            <div class="card mb-3">
                <div class="card-header @statusClass.Replace("bg-", "bg-opacity-10 text-")">
                    <h6 class="mb-0"><i class="bi bi-cash-stack"></i> Payment Status</h6>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt>Total Amount:</dt>
                        <dd><h4>₦@Model.TotalAmount.ToString("N2")</h4></dd>

                        <dt>Amount Paid:</dt>
                        <dd class="text-success"><h5>₦@Model.AmountPaid.ToString("N2")</h5></dd>

                        <dt>Balance Due:</dt>
                        <dd>
                            <h4 class="@(Model.Balance > 0 ? "text-danger" : "text-success")">
                                <strong>₦@Model.Balance.ToString("N2")</strong>
                            </h4>
                        </dd>
                    </dl>

                    @if (Model.Balance <= 0)
                    {
                        <div class="alert alert-success mt-3 mb-0">
                            <i class="bi bi-check-circle"></i> Paid in Full
                        </div>
                    }
                    else if (Model.IsOverdue)
                    {
                        <div class="alert alert-danger mt-3 mb-0">
                            <i class="bi bi-exclamation-triangle"></i>
                            This invoice is @Model.DaysOverdue days overdue
                        </div>
                    }
                </div>
            </div>

            <!-- Payment History -->
            @if (Model.Payments.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h6 class="mb-0"><i class="bi bi-clock-history"></i> Payment History</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var payment in Model.Payments.OrderByDescending(p => p.PaymentDate))
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between">
                                        <strong class="text-success">₦@payment.Amount.ToString("N2")</strong>
                                        <small class="text-muted">@payment.PaymentDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <small class="text-muted">
                                        @payment.PaymentMethod
                                        @if (!string.IsNullOrEmpty(payment.ReferenceNumber))
                                        {
                                            <text> - Ref: @payment.ReferenceNumber</text>
                                        }
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style media="print">
    .btn, nav, footer, .card-header {
        display: none !important;
    }
</style>
