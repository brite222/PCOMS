@{
    ViewData["Title"] = "Project Details";
    var project = Model;
}

<h2 class="mb-3">@project.Name</h2>

<p>
    Status:
    <span class="badge bg-success">
        @project.Status
    </span>
</p>

<hr />

<h4>Approved Time Entries</h4>

@if (project.TimeEntries == null || project.TimeEntries.Count == 0)
{
    <div class="alert alert-info">
        No approved time entries yet.
    </div>
}
else
{
    <div class="card shadow-sm">
        <table class="table table-striped mb-0">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Hours</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in project.TimeEntries)
                {
                    <tr>
                        <td>@entry.WorkDate.ToShortDateString()</td>
                        <td>@entry.Hours</td>
                        <td>@entry.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<a asp-action="Index" class="btn btn-secondary mt-3">
    ← Back to Dashboard
</a>
