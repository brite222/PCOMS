@model IEnumerable<PCOMS.Application.DTOs.InvoiceDto>

@{
    ViewData["Title"] = "My Invoices";
    var client = ViewBag.Client as PCOMS.Models.Client;
    var selectedStatus = ViewBag.SelectedStatus as string;

    var totalInvoiced = Model.Sum(i => i.TotalAmount);
    var totalPaid = Model.Sum(i => i.AmountPaid);
    var totalOutstanding = Model.Sum(i => i.Balance);
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-receipt"></i> My Invoices</h2>
            <p class="text-muted">@client.Name</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6>Total Invoiced</h6>
                    <h3>₦@totalInvoiced.ToString("N2")</h3>
                    <small>@Model.Count() invoices</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6>Total Paid</h6>
                    <h3>₦@totalPaid.ToString("N2")</h3>
                    <small>@Model.Count(i => i.Status == "Paid") paid</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6>Outstanding Balance</h6>
                    <h3>₦@totalOutstanding.ToString("N2")</h3>
                    <small>@Model.Count(i => i.Balance > 0) unpaid</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3">
        <div class="card-body">
            <form method="get">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <label>Filter by Status</label>
                        <select name="status" class="form-select">
                            <option value="">All Invoices</option>
                            <option value="Draft" selected="@(selectedStatus == "Draft")">Draft</option>
                            <option value="Sent" selected="@(selectedStatus == "Sent")">Sent</option>
                            <option value="Viewed" selected="@(selectedStatus == "Viewed")">Viewed</option>
                            <option value="PartiallyPaid" selected="@(selectedStatus == "PartiallyPaid")">Partially Paid</option>
                            <option value="Paid" selected="@(selectedStatus == "Paid")">Paid</option>
                            <option value="Overdue" selected="@(selectedStatus == "Overdue")">Overdue</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Filter
                        </button>
                    </div>
                    <div class="col-md-6 text-end">
                        <a asp-action="MyInvoices" class="btn btn-outline-secondary">
                            Clear Filters
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Invoices Table -->
    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Project</th>
                                <th>Invoice Date</th>
                                <th>Due Date</th>
                                <th class="text-end">Total Amount</th>
                                <th class="text-end">Amount Paid</th>
                                <th class="text-end">Balance</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.OrderByDescending(i => i.InvoiceDate))
                            {
                                var statusClass = invoice.Status switch
                                {
                                    "Paid" => "bg-success",
                                    "PartiallyPaid" => "bg-info",
                                    "Overdue" => "bg-danger",
                                    "Sent" => "bg-primary",
                                    "Viewed" => "bg-primary",
                                    _ => "bg-secondary"
                                };

                                var rowClass = invoice.IsOverdue ? "table-danger" : "";

                                <tr class="@rowClass">
                                    <td>
                                        <a asp-action="InvoiceDetails" asp-route-id="@invoice.Id">
                                            <strong>@invoice.InvoiceNumber</strong>
                                        </a>
                                    </td>
                                    <td>@invoice.ProjectName</td>
                                    <td>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @invoice.DueDate.ToString("MMM dd, yyyy")
                                        @if (invoice.IsOverdue)
                                        {
                                            <br />
                                            <small class="text-danger">
                                                <i class="bi bi-exclamation-triangle"></i>
                                                @invoice.DaysOverdue days overdue
                                            </small>
                                        }
                                    </td>
                                    <td class="text-end"><strong>₦@invoice.TotalAmount.ToString("N2")</strong></td>
                                    <td class="text-end text-success">₦@invoice.AmountPaid.ToString("N2")</td>
                                    <td class="text-end">
                                        <strong class="@(invoice.Balance > 0 ? "text-danger" : "text-success")">
                                            ₦@invoice.Balance.ToString("N2")
                                        </strong>
                                    </td>
                                    <td>
                                        <span class="badge @statusClass">@invoice.Status</span>
                                    </td>
                                    <td>
                                        <a asp-action="InvoiceDetails" asp-route-id="@invoice.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary">
                            <tr>
                                <th colspan="4">TOTALS</th>
                                <th class="text-end">₦@totalInvoiced.ToString("N2")</th>
                                <th class="text-end">₦@totalPaid.ToString("N2")</th>
                                <th class="text-end">₦@totalOutstanding.ToString("N2")</th>
                                <th colspan="2"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No invoices found.
        </div>
    }
</div>
