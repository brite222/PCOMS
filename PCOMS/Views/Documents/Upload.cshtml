@model PCOMS.Application.Interfaces.DTOs.CreateDocumentDto

@{
    ViewData["Title"] = "Upload Document";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-upload"></i> Upload Document</h4>
                    <p class="mb-0 text-muted">Project: <strong>@ViewBag.ProjectName</strong></p>
                </div>
                <div class="card-body">
                    <form asp-action="Upload" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProjectId" />

                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Select File *</label>
                            <input asp-for="File" class="form-control" type="file" required />
                            <span asp-validation-for="File" class="text-danger"></span>
                            <div class="form-text">
                                Maximum file size: 50MB. Supported formats: PDF, DOC, DOCX, XLS, XLSX, TXT, PNG, JPG, ZIP
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Category *</label>
                            <select asp-for="Category" class="form-select" required>
                                <option value="General">General</option>
                                <option value="Requirements">Requirements</option>
                                <option value="Design">Design</option>
                                <option value="Contract">Contract</option>
                                <option value="Technical">Technical Documentation</option>
                                <option value="Meeting">Meeting Notes</option>
                                <option value="Report">Report</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                      placeholder="Brief description of this document..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tags" class="form-label">Tags</label>
                            <input asp-for="Tags" class="form-control"
                                   placeholder="e.g., important, review-needed, draft (comma-separated)" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                            <div class="form-text">
                                Add tags separated by commas for easier searching
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsClientVisible" class="form-check-input" type="checkbox" />
                            <label asp-for="IsClientVisible" class="form-check-label">
                                Make this document visible to clients
                            </label>
                            <div class="form-text">
                                If checked, clients will be able to view and download this document
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", new { projectId = Model.ProjectId })"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-upload"></i> Upload Document
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Upload Guidelines -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-info-circle"></i> Upload Guidelines</h6>
                </div>
                <div class="card-body">
                    <ul>
                        <li><strong>File Naming:</strong> Use descriptive names for easy identification</li>
                        <li><strong>Categories:</strong> Choose the most appropriate category for organization</li>
                        <li><strong>Versions:</strong> You can upload new versions later without losing the original</li>
                        <li><strong>Client Visibility:</strong> Only check this if the client should have access</li>
                        <li><strong>Security:</strong> Ensure no sensitive internal information is shared with clients</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // File size validation (50MB)
        document.querySelector('input[type="file"]').addEventListener('change', function() {
            const maxSize = 50 * 1024 * 1024; // 50MB in bytes
            if (this.files[0] && this.files[0].size > maxSize) {
                alert('File size must not exceed 50MB');
                this.value = '';
            }
        });
    </script>
}
