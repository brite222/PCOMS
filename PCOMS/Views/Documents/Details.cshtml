@model PCOMS.Application.Interfaces.DTOs.DocumentDto

@{
    ViewData["Title"] = "Document Details";
    var versionHistory = ViewBag.VersionHistory as IEnumerable<PCOMS.Application.Interfaces.DTOs.DocumentVersionDto>;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <!-- Document Details Card -->
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-file-earmark-text"></i> @Model.FileName</h4>
                    <span class="badge bg-primary">Version @Model.Version</span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Project:</strong>
                            <p>@Model.ProjectName</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Category:</strong>
                            <p><span class="badge bg-secondary">@Model.Category</span></p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Uploaded By:</strong>
                            <p>@Model.UploadedByName</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Uploaded At:</strong>
                            <p>@Model.UploadedAt.ToString("MMMM dd, yyyy HH:mm")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>File Size:</strong>
                            <p>@Model.FileSizeFormatted</p>
                        </div>
                        <div class="col-md-6">
                            <strong>File Type:</strong>
                            <p>@(Model.FileType ?? "Unknown")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Description:</strong>
                                <p>@Model.Description</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Tags))
                    {
                        <div class="row mb-3">
                            <div class="col-md-12">
                                <strong>Tags:</strong>
                                <p>
                                    @foreach (var tag in Model.Tags.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge bg-info me-1">@tag.Trim()</span>
                                    }
                                </p>
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <strong>Client Visibility:</strong>
                            <p>
                                @if (Model.IsClientVisible)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-eye"></i> Visible to Clients
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-eye-slash"></i> Not Visible to Clients
                                    </span>
                                }
                                @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                {
                                    <button class="btn btn-sm btn-outline-primary ms-2" id="toggleVisibilityBtn">
                                        Toggle Visibility
                                    </button>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <a href="@Url.Action("Download", new { id = Model.Id })"
                           class="btn btn-primary">
                            <i class="bi bi-download"></i> Download
                        </a>

                        @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager") || User.IsInRole("Developer"))
                        {
                            <a href="@Url.Action("UploadVersion", new { id = Model.Id })"
                               class="btn btn-success">
                                <i class="bi bi-arrow-up-circle"></i> Upload New Version
                            </a>
                        }

                        @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                        {
                            <a href="@Url.Action("Edit", new { id = Model.Id })"
                               class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit Metadata
                            </a>

                            <form asp-action="Delete" method="post" class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this document?');">
                                <input type="hidden" name="id" value="@Model.Id" />
                                <input type="hidden" name="projectId" value="@Model.ProjectId" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        }

                        <a href="@Url.Action("Index", new { projectId = Model.ProjectId })"
                           class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Documents
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- Version History Card -->
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-clock-history"></i> Version History</h5>
                </div>
                <div class="card-body">
                    @if (versionHistory != null && versionHistory.Any())
                    {
                        <div class="list-group">
                            @foreach (var version in versionHistory)
                            {
                                <div class="list-group-item @(version.Version == Model.Version ? "active" : "")">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">Version @version.Version</h6>
                                        <small>@version.UploadedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <p class="mb-1">
                                        <small>By: @version.UploadedBy</small>
                                    </p>
                                    @if (!string.IsNullOrEmpty(version.Description))
                                    {
                                        <p class="mb-1"><small>@version.Description</small></p>
                                    }
                                    <small class="text-muted">Size: @FormatBytes(version.FileSize)</small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No version history available</p>
                    }
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-lightning"></i> Quick Actions</h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Details", "Projects", new { id = Model.ProjectId })"
                           class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-folder"></i> View Project
                        </a>
                        <a href="@Url.Action("Index", new { projectId = Model.ProjectId })"
                           class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-files"></i> All Project Documents
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string FormatBytes(long bytes)
    {
        string[] sizes = { "B", "KB", "MB", "GB", "TB" };
        double len = bytes;
        int order = 0;
        while (len >= 1024 && order < sizes.Length - 1)
        {
            order++;
            len = len / 1024;
        }
        return $"{len:0.##} {sizes[order]}";
    }
}

@section Scripts {
    <script>
        document.getElementById('toggleVisibilityBtn')?.addEventListener('click', async function() {
            const docId = @Model.Id;
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            try {
                const response = await fetch('@Url.Action("ToggleVisibility")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ id: docId })
                });

                const result = await response.json();
                if (result.success) {
                    location.reload();
                } else {
                    alert('Failed to toggle visibility');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred');
            }
        });
    </script>
}
