@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Time Tracking";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-clock"></i> Time Tracking</h2>
            <a asp-action="LogTime" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Log Time
            </a>
            <a asp-action="Timesheets" class="btn btn-secondary">
                <i class="bi bi-calendar-week"></i> My Timesheets
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">This Week</h6>
                    <h3>
                        @if (Model != null)
                        {
                            var thisWeekHours = Model.Where(e => e.Date >= DateTime.Today.AddDays(-7)).Sum(e => (decimal)e.Hours);
                            @thisWeekHours.ToString("0.0")
                        }
                        else
                        {
                            <text>0.0</text>
                        }
                        <small class="text-muted">hrs</small>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">This Month</h6>
                    <h3>
                        @if (Model != null)
                        {
                            var thisMonthHours = Model.Where(e => e.Date >= DateTime.Today.AddDays(-30)).Sum(e => (decimal)e.Hours);
                            @thisMonthHours.ToString("0.0")
                        }
                        else
                        {
                            <text>0.0</text>
                        }
                        <small class="text-muted">hrs</small>
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Total Entries</h6>
                    <h3>@(Model?.Count() ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Pending</h6>
                    <h3>
                        @if (Model != null)
                        {
                            var pending = Model.Count(e => e.Status == "Pending" || e.Status == "Draft");
                            @pending
                        }
                        else
                        {
                            <text>0</text>
                        }
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Time Entries Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Recent Time Entries</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Project</th>
                                <th>Hours</th>
                                <th>Description</th>
                                <th>Billable</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.OrderByDescending(e => e.Date).Take(20))
                            {
                                <tr>
                                    <td>@entry.Date.ToString("MMM dd, yyyy")</td>
                                    <td>@(entry.ProjectName ?? "N/A")</td>
                                    <td>@entry.Hours.ToString("0.00")</td>
                                    <td>
                                        @if (entry.Description != null && entry.Description.Length > 60)
                                        {
                                            <text>@entry.Description.Substring(0, 50)...</text>
                                                                }
                                        else
                                        {
                                            @(entry.Description ?? "-")
                                        }
                                    </td>
                                    <td>
                                        @if (entry.IsBillable)
                                        {
                                            <span class="badge bg-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="EditEntry" asp-route-id="@entry.Id" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="DeleteEntry" asp-route-id="@entry.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this entry?')"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No time entries found.
                    <a asp-action="LogTime" class="alert-link">Log your first time entry</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
