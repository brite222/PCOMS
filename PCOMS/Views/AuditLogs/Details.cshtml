@model PCOMS.Application.DTOs.AuditLogDto
@{
    ViewData["Title"] = "Audit Log Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header -->
            <div class="mb-4">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-action="Index">Audit Logs</a>
                        </li>
                        <li class="breadcrumb-item active">Log #@Model.Id</li>
                    </ol>
                </nav>
                <h2 class="mb-1">
                    <i class="bi bi-file-earmark-text text-primary"></i> Audit Log Details
                </h2>
                <p class="text-muted">Detailed information about this audit entry</p>
            </div>

            <!-- Main Details Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Log Entry #@Model.Id</h5>
                        @switch (Model.Action.ToUpper())
                        {
                            case "CREATE":
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-plus-circle me-1"></i>CREATE
                                </span>
                                break;
                            case "EDIT":
                            case "UPDATE":
                                <span class="badge bg-primary fs-6">
                                    <i class="bi bi-pencil me-1"></i>EDIT
                                </span>
                                break;
                            case "DELETE":
                                <span class="badge bg-danger fs-6">
                                    <i class="bi bi-trash me-1"></i>DELETE
                                </span>
                                break;
                            case "LOGIN":
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>LOGIN
                                </span>
                                break;
                            case "LOGOUT":
                                <span class="badge bg-secondary fs-6">
                                    <i class="bi bi-box-arrow-right me-1"></i>LOGOUT
                                </span>
                                break;
                            default:
                                <span class="badge bg-warning fs-6">@Model.Action.ToUpper()</span>
                                break;
                        }
                    </div>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">
                            <i class="bi bi-hash text-primary me-2"></i>Log ID
                        </dt>
                        <dd class="col-sm-9">
                            <code class="text-primary">#@Model.Id</code>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-person text-primary me-2"></i>User
                        </dt>
                        <dd class="col-sm-9">
                            <strong>@Model.UserEmail</strong>
                            @if (!string.IsNullOrEmpty(Model.UserId))
                            {
                                <br />
                            
                                <small class="text-muted">User ID: @Model.UserId</small>
                            }
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-lightning text-primary me-2"></i>Action
                        </dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Action</strong>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-box text-primary me-2"></i>Entity
                        </dt>
                        <dd class="col-sm-9">
                            <strong>@Model.Entity</strong>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-key text-primary me-2"></i>Entity ID
                        </dt>
                        <dd class="col-sm-9">
                            <code class="text-primary">#@Model.EntityId</code>
                        </dd>

                        <dt class="col-sm-3">
                            <i class="bi bi-clock text-primary me-2"></i>Timestamp
                        </dt>
                        <dd class="col-sm-9">
                            <strong>@Model.PerformedAt.ToString("MMMM dd, yyyy")</strong> at
                            <strong>@Model.PerformedAt.ToString("hh:mm:ss tt")</strong>
                            <br />
                            <small class="text-muted">
                                @((DateTime.Now - Model.PerformedAt).TotalHours < 24
                                                                ? $"{(int)(DateTime.Now - Model.PerformedAt).TotalHours} hours ago"
                                                                : $"{(int)(DateTime.Now - Model.PerformedAt).TotalDays} days ago")
                            </small>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.IpAddress))
                        {
                            <dt class="col-sm-3">
                                <i class="bi bi-globe text-primary me-2"></i>IP Address
                            </dt>
                            <dd class="col-sm-9">
                                <code>@Model.IpAddress</code>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Changes Card -->
            @if (!string.IsNullOrEmpty(Model.OldValue) || !string.IsNullOrEmpty(Model.NewValue))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-arrow-left-right me-2"></i>Changes Made
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @if (!string.IsNullOrEmpty(Model.OldValue))
                            {
                                <div class="col-md-6">
                                    <h6 class="text-danger">
                                        <i class="bi bi-dash-circle me-1"></i>Old Value
                                    </h6>
                                    <div class="bg-danger bg-opacity-10 p-3 rounded">
                                        <pre class="mb-0"><code>@Model.OldValue</code></pre>
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.NewValue))
                            {
                                <div class="col-md-6">
                                    <h6 class="text-success">
                                        <i class="bi bi-plus-circle me-1"></i>New Value
                                    </h6>
                                    <div class="bg-success bg-opacity-10 p-3 rounded">
                                        <pre class="mb-0"><code>@Model.NewValue</code></pre>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Additional Details -->
            @if (!string.IsNullOrEmpty(Model.Details))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle me-2"></i>Additional Details
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Details</p>
                    </div>
                </div>
            }

            <!-- Actions -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Logs
                </a>
                <div>
                    <button onclick="window.print()" class="btn btn-outline-primary">
                        <i class="bi bi-printer me-2"></i>Print
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
        font-size: 0.875rem;
    }

    code {
        font-family: 'Courier New', monospace;
    }

    @@media print {
        .btn, nav, .card-header {
            display: none !important;
        }
    }
</style>
