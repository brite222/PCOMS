@model IEnumerable<PCOMS.Application.Interfaces.DTOs.ActivityLogDto>

@{
    ViewData["Title"] = "Activity Log";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-activity"></i> Activity Log</h2>
            <p class="text-muted">Recent system activity and changes</p>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="timeline">
            @foreach (var activity in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-1 text-center">
                                <i class="bi @activity.Icon text-@activity.Color" style="font-size: 1.5rem;"></i>
                            </div>
                            <div class="col-md-11">
                                <h6 class="mb-1">
                                    <strong>@activity.UserName</strong>
                                    <span class="text-@activity.Color">@activity.Action.ToLower()</span>
                                    <span class="badge bg-secondary">@activity.EntityType</span>
                                    @if (!string.IsNullOrEmpty(activity.EntityName))
                                    {
                                        <text>"@activity.EntityName"</text>
                                    }
                                </h6>

                                @if (!string.IsNullOrEmpty(activity.ProjectName))
                                {
                                    <p class="mb-1">
                                        <small class="text-muted">
                                            <i class="bi bi-folder"></i> Project: @activity.ProjectName
                                        </small>
                                    </p>
                                }

                                @if (!string.IsNullOrEmpty(activity.Details))
                                {
                                    <p class="mb-1">
                                        <small>@activity.Details</small>
                                    </p>
                                }

                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> @activity.TimeAgo
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination hint -->
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            Showing recent activity. Use filters to find specific activities.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No activity recorded yet.
        </div>
    }
</div>

<style>
    .timeline {
        position: relative;
    }

        .timeline::before {
            content: '';
            position: absolute;
            left: 30px;
            top: 0;
            bottom: 0;
            width: 2px;
            background: #dee2e6;
        }
</style>
