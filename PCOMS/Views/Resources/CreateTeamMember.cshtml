@model PCOMS.Application.DTOs.CreateTeamMemberDto

@{
    ViewData["Title"] = "Add Team Member";
}

<div class="container mt-4" style="max-width:800px">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-plus"></i> Add Team Member</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="CreateTeamMember" method="post">
                @Html.AntiForgeryToken()

                <div class="row g-3">
                    <!-- User Account -->
                    <div class="col-12">
                        <label asp-for="UserId" class="form-label fw-semibold">User Account *</label>
                        <select asp-for="UserId" asp-items="ViewBag.Users" class="form-select">
                            <option value="">-- Select User Account --</option>
                        </select>
                        <span asp-validation-for="UserId" class="text-danger small"></span>
                        <small class="text-muted">Link to existing user account</small>
                    </div>

                    <!-- Full Name -->
                    <div class="col-md-6">
                        <label asp-for="FullName" class="form-label fw-semibold">Full Name *</label>
                        <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>

                    <!-- Job Title -->
                    <div class="col-md-6">
                        <label asp-for="JobTitle" class="form-label fw-semibold">Job Title *</label>
                        <input asp-for="JobTitle" class="form-control" placeholder="Senior Developer" />
                        <span asp-validation-for="JobTitle" class="text-danger small"></span>
                    </div>

                    <!-- Department -->
                    <div class="col-md-6">
                        <label asp-for="Department" class="form-label fw-semibold">Department</label>
                        <select asp-for="Department" class="form-select">
                            <option value="Development">Development</option>
                            <option value="Design">Design</option>
                            <option value="QA">QA</option>
                            <option value="Management">Management</option>
                            <option value="DevOps">DevOps</option>
                            <option value="Sales">Sales</option>
                            <option value="Marketing">Marketing</option>
                        </select>
                    </div>

                    <!-- Employment Type -->
                    <div class="col-md-6">
                        <label asp-for="EmploymentType" class="form-label fw-semibold">Employment Type</label>
                        <select asp-for="EmploymentType" class="form-select">
                            <option value="FullTime">Full-Time</option>
                            <option value="PartTime">Part-Time</option>
                            <option value="Contract">Contract</option>
                            <option value="Freelance">Freelance</option>
                        </select>
                    </div>

                    <!-- Hourly Rate -->
                    <div class="col-md-6">
                        <label asp-for="HourlyRate" class="form-label fw-semibold">Hourly Rate ($)</label>
                        <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" placeholder="75.00" />
                        <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                    </div>

                    <!-- Weekly Capacity -->
                    <div class="col-md-6">
                        <label asp-for="WeeklyCapacityHours" class="form-label fw-semibold">Weekly Capacity (hours)</label>
                        <input asp-for="WeeklyCapacityHours" type="number" class="form-control" value="40" />
                        <span asp-validation-for="WeeklyCapacityHours" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label fw-semibold">Email</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="john@company.com" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Phone -->
                    <div class="col-md-6">
                        <label asp-for="Phone" class="form-label fw-semibold">Phone</label>
                        <input asp-for="Phone" type="tel" class="form-control" placeholder="+1234567890" />
                        <span asp-validation-for="Phone" class="text-danger small"></span>
                    </div>

                    <!-- Start Date -->
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label fw-semibold">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                    </div>

                    <!-- End Date (for contractors) -->
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label fw-semibold">End Date (optional)</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <small class="text-muted">For contractors/temporary staff</small>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="TeamMembers" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-5">
                        <i class="bi bi-check-circle"></i> Create Team Member
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="alert alert-info mt-3">
        <i class="bi bi-info-circle"></i>
        <strong>Next steps:</strong> After creating, you can add skills, certifications, and allocate to projects.
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
