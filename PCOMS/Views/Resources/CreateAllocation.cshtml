@model PCOMS.Application.DTOs.CreateAllocationDto

@{
    ViewData["Title"] = "Allocate Resource";
}

<div class="container mt-4" style="max-width:700px">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-arrow-left-right"></i> Allocate Resource to Project</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="CreateAllocation" method="post">
                @Html.AntiForgeryToken()

                <!-- Team Member -->
                <div class="mb-3">
                    <label asp-for="TeamMemberId" class="form-label fw-semibold">Team Member *</label>
                    <select asp-for="TeamMemberId" asp-items="ViewBag.TeamMembers" class="form-select">
                        <option value="">-- Select Team Member --</option>
                    </select>
                    <span asp-validation-for="TeamMemberId" class="text-danger small"></span>
                </div>

                <!-- Project -->
                <div class="mb-3">
                    <label asp-for="ProjectId" class="form-label fw-semibold">Project *</label>
                    <select asp-for="ProjectId" asp-items="ViewBag.Projects" class="form-select">
                        <option value="">-- Select Project --</option>
                    </select>
                    <span asp-validation-for="ProjectId" class="text-danger small"></span>
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Role" class="form-label fw-semibold">Role *</label>
                    <input asp-for="Role" class="form-control" placeholder="e.g., Lead Developer, UI Designer, QA Engineer" />
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>

                <!-- Allocation Percentage -->
                <div class="mb-3">
                    <label asp-for="AllocationPercentage" class="form-label fw-semibold">Allocation Percentage *</label>
                    <div class="input-group">
                        <input asp-for="AllocationPercentage" type="number" min="1" max="100" class="form-control" value="100" />
                        <span class="input-group-text">%</span>
                    </div>
                    <span asp-validation-for="AllocationPercentage" class="text-danger small"></span>
                    <small class="text-muted d-block">
                        100% = Full-time, 50% = Half-time, etc.
                    </small>
                </div>

                <!-- Estimated Hours -->
                <div class="mb-3">
                    <label asp-for="EstimatedHours" class="form-label fw-semibold">Estimated Hours</label>
                    <input asp-for="EstimatedHours" type="number" step="0.5" class="form-control" placeholder="160" />
                    <span asp-validation-for="EstimatedHours" class="text-danger small"></span>
                    <small class="text-muted">Total hours expected for this allocation</small>
                </div>

                <div class="row g-3">
                    <!-- Start Date -->
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label fw-semibold">Start Date *</label>
                        <input asp-for="StartDate" type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                    </div>

                    <!-- End Date -->
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label fw-semibold">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <small class="text-muted">Optional</small>
                    </div>
                </div>

                <!-- Notes -->
                <div class="mb-3 mt-3">
                    <label asp-for="Notes" class="form-label fw-semibold">Notes (optional)</label>
                    <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any additional details..."></textarea>
                </div>

                <!-- Warning Box -->
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Note:</strong> The system will prevent allocating more than 100% total capacity for this team member.
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Allocations" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-success px-5">
                        <i class="bi bi-check-circle"></i> Allocate Resource
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
