@model IEnumerable<PCOMS.Application.DTOs.ResourceRequestDto>

@{
    ViewData["Title"] = "Resource Requests";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-inbox"></i> Resource Requests</h2>
            <p class="text-muted">Pending resource allocation requests</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateResourceRequest" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Request
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var request in Model)
            {
                <div class="col-lg-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h6 class="mb-0">@request.ProjectName</h6>
                            <span class="badge bg-warning">Pending</span>
                        </div>
                        <div class="card-body">
                            <div class="row g-2 mb-3">
                                <div class="col-6">
                                    <small class="text-muted">Requested Role</small>
                                    <div><strong>@request.RequestedRole</strong></div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Required Skill</small>
                                    <div><strong>@(request.RequiredSkillName ?? "Any")</strong></div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Proficiency</small>
                                    <div>@request.ProficiencyRequired</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Allocation</small>
                                    <div>@request.AllocationPercentage%</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Duration</small>
                                    <div>@request.StartDate.ToString("MMM d") - @(request.EndDate?.ToString("MMM d") ?? "Ongoing")</div>
                                </div>
                                <div class="col-6">
                                    <small class="text-muted">Hours</small>
                                    <div>@request.EstimatedHours h</div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <small class="text-muted">Requested by</small>
                                <div>@request.RequestedByName <span class="text-muted">on @request.RequestedAt.ToString("MMM d, yyyy")</span></div>
                            </div>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="border-top pt-3">
                                    <form asp-action="ApproveResourceRequest" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="RequestId" value="@request.Id" />
                                        <div class="mb-2">
                                            <label class="form-label small">Assign Team Member:</label>
                                            <select name="AssignedTeamMemberId" class="form-select form-select-sm" required>
                                                <option value="">-- Select --</option>
                                                <!-- This should be populated from ViewBag in real implementation -->
                                            </select>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-success btn-sm flex-grow-1">
                                                <i class="bi bi-check-circle"></i> Approve & Assign
                                            </button>
                                            <button type="button" class="btn btn-danger btn-sm" onclick="alert('Reject not implemented yet')">
                                                <i class="bi bi-x-circle"></i> Reject
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                <h5>No Pending Requests</h5>
                <p class="text-muted">All resource requests have been processed.</p>
            </div>
        </div>
    }
</div>
