@model IEnumerable<PCOMS.Application.DTOs.SkillMatrixDto>

@{
    ViewData["Title"] = "Skills Matrix";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-grid-3x3"></i> Skills Matrix</h2>
            <p class="text-muted">Team skills breakdown by proficiency level</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                <i class="bi bi-speedometer"></i> Dashboard
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Legend -->
        <div class="card mb-3">
            <div class="card-body py-2">
                <div class="row text-center">
                    <div class="col">
                        <span class="badge bg-secondary">Beginner</span>
                        <small class="text-muted">1-2 years</small>
                    </div>
                    <div class="col">
                        <span class="badge bg-info">Intermediate</span>
                        <small class="text-muted">2-4 years</small>
                    </div>
                    <div class="col">
                        <span class="badge bg-primary">Advanced</span>
                        <small class="text-muted">4-7 years</small>
                    </div>
                    <div class="col">
                        <span class="badge bg-success">Expert</span>
                        <small class="text-muted">7+ years</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Skills by Category -->
        @foreach (var category in Model.GroupBy(s => s.Category))
        {
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">@category.Key</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th style="width:25%">Skill</th>
                                    <th class="text-center">Beginner</th>
                                    <th class="text-center">Intermediate</th>
                                    <th class="text-center">Advanced</th>
                                    <th class="text-center">Expert</th>
                                    <th class="text-center">Total</th>
                                    <th style="width:30%">Coverage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var skill in category.OrderByDescending(s => s.TotalCount))
                                {
                                    var maxCount = category.Max(s => s.TotalCount);
                                    var coverage = maxCount > 0 ? (decimal)skill.TotalCount / maxCount * 100 : 0;

                                    // Gap detection
                                    var hasGap = skill.TotalCount < 3;
                                    var rowClass = hasGap ? "table-warning" : "";

                                    <tr class="@rowClass">
                                        <td>
                                            <strong>@skill.SkillName</strong>
                                            @if (hasGap)
                                            {
                                                <i class="bi bi-exclamation-triangle text-warning ms-2" title="Skill gap detected"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (skill.BeginnerCount > 0)
                                            {
                                                <span class="badge bg-secondary">@skill.BeginnerCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (skill.IntermediateCount > 0)
                                            {
                                                <span class="badge bg-info">@skill.IntermediateCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (skill.AdvancedCount > 0)
                                            {
                                                <span class="badge bg-primary">@skill.AdvancedCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (skill.ExpertCount > 0)
                                            {
                                                <span class="badge bg-success">@skill.ExpertCount</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <strong>@skill.TotalCount</strong>
                                        </td>
                                        <td>
                                            <div class="progress" style="height:20px">
                                                @if (skill.BeginnerCount > 0)
                                                {
                                                    <div class="progress-bar bg-secondary" style="width:@((decimal)skill.BeginnerCount / skill.TotalCount * 100)%"
                                                         title="@skill.BeginnerCount Beginner">
                                                        @skill.BeginnerCount
                                                    </div>
                                                }
                                                @if (skill.IntermediateCount > 0)
                                                {
                                                    <div class="progress-bar bg-info" style="width:@((decimal)skill.IntermediateCount / skill.TotalCount * 100)%"
                                                         title="@skill.IntermediateCount Intermediate">
                                                        @skill.IntermediateCount
                                                    </div>
                                                }
                                                @if (skill.AdvancedCount > 0)
                                                {
                                                    <div class="progress-bar bg-primary" style="width:@((decimal)skill.AdvancedCount / skill.TotalCount * 100)%"
                                                         title="@skill.AdvancedCount Advanced">
                                                        @skill.AdvancedCount
                                                    </div>
                                                }
                                                @if (skill.ExpertCount > 0)
                                                {
                                                    <div class="progress-bar bg-success" style="width:@((decimal)skill.ExpertCount / skill.TotalCount * 100)%"
                                                         title="@skill.ExpertCount Expert">
                                                        @skill.ExpertCount
                                                    </div>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Gap Analysis -->
        <div class="card shadow-sm border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Skill Gaps Detected</h6>
            </div>
            <div class="card-body">
                @{
                    var gaps = Model.Where(s => s.TotalCount < 3).ToList();
                }
                @if (gaps.Any())
                {
                    <p>The following skills have limited coverage (less than 3 team members):</p>
                    <div class="row">
                        @foreach (var gap in gaps)
                        {
                            <div class="col-md-4 mb-2">
                                <span class="badge bg-warning text-dark me-2">@gap.SkillName</span>
                                <small class="text-muted">(@gap.TotalCount people)</small>
                            </div>
                        }
                    </div>
                    <div class="alert alert-info mt-3 mb-0">
                        <strong>Recommendation:</strong> Consider hiring or training to fill these skill gaps.
                    </div>
                }
                else
                {
                    <p class="text-success mb-0">
                        <i class="bi bi-check-circle"></i> No critical skill gaps detected. All skills have adequate coverage.
                    </p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-grid-3x3 display-1 text-muted mb-3"></i>
                <h5>No Skills Data Yet</h5>
                <p class="text-muted">Add skills to team members to see the skills matrix.</p>
                <a asp-action="TeamMembers" class="btn btn-primary">
                    <i class="bi bi-people"></i> Manage Team
                </a>
            </div>
        </div>
    }
</div>
