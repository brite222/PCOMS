@model IEnumerable<PCOMS.Application.DTOs.TimeEntryDto>

@{
    ViewData["Title"] = "My Time Entries";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-clock-history"></i> My Time Entries</h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Entry
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Project</th>
                                <th>Hours</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                <tr>
                                    <td>@entry.WorkDate.ToString("MMM dd, yyyy")</td>
                                    <td>@entry.ProjectName</td>
                                    <td>@entry.Hours.ToString("0.00")</td>
                                    <td>
                                        @if (entry.Description != null && entry.Description.Length > 50)
                                        {
                                            <text>@entry.Description.Substring(0, 50)...</text>
                                        }
                                        else
                                        {
                                            @entry.Description
                                        }
                                    </td>
                                    <td>
                                        @switch (entry.Status)
                                        {
                                            case PCOMS.Models.TimeEntryStatus.Approved:
                                                <span class="badge bg-success">Approved</span>
                                                break;
                                            case PCOMS.Models.TimeEntryStatus.Rejected:
                                                <span class="badge bg-danger">Rejected</span>
                                                break;
                                            case PCOMS.Models.TimeEntryStatus.Submitted:
                                                <span class="badge bg-warning">Submitted</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@entry.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (entry.Status != PCOMS.Models.TimeEntryStatus.Approved)
                                        {
                                            <a asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-sm btn-primary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="Delete" asp-route-id="@entry.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger"
                                                        onclick="return confirm('Are you sure you want to delete this time entry?')"
                                                        title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Locked</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> You haven't logged any time yet.
                    <a asp-action="Create" class="alert-link">Create your first time entry</a>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
