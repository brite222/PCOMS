@using PCOMS.Models
@model List<PCOMS.Application.DTOs.TimeEntryDto>

<h2 class="mb-3">My Time Entries</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Time Entries</h2>

    <a asp-action="Create"
       class="btn btn-primary">
        + Add Time Entry
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        You have not submitted any time entries yet.
    </div>
}
else
{
    <div class="card shadow-sm">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Project</th>
                    <th>Description</th>
                    <th>Hours</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model)
                {
                    <tr>
                        <td>@entry.WorkDate.ToShortDateString()</td>
                        <td>@entry.ProjectName</td>
                        <td>@entry.Description</td>
                        <td>
                            <span class="badge bg-info text-dark">
                                @entry.Hours h
                            </span>
                        </td>
                        <td>
                            @if (entry.Status == TimeEntryStatus.Submitted)
                                                
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (entry.Status == TimeEntryStatus.Approved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Rejected</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
