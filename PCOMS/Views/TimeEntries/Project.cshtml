@model IEnumerable<PCOMS.Application.DTOs.TimeEntryDto>

@{
    ViewData["Title"] = "Project Time Entries";
    var projectName = ViewBag.ProjectName as string ?? "Project";
    var projectId = ViewBag.ProjectId as int? ?? 0;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-clock-history"></i> Time Entries - @projectName</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Projects
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4">Developer</th>
                            <th>Date</th>
                            <th>Hours</th>
                            <th>Description</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var entry in Model)
                        {
                            <tr>
                                <td class="ps-4">@entry.DeveloperName</td>
                                <td>@entry.WorkDate.ToString("MMM dd, yyyy")</td>
                                <td><strong>@entry.Hours hrs</strong></td>
                                <td>@entry.Description</td>
                                <td>
                                    @switch (entry.Status)
                                    {
                                        case PCOMS.Models.TimeEntryStatus.Submitted:
                                            <span class="badge bg-warning">Submitted</span>
                                            break;
                                        case PCOMS.Models.TimeEntryStatus.Approved:
                                            <span class="badge bg-success">Approved</span>
                                            break;
                                        case PCOMS.Models.TimeEntryStatus.Rejected:
                                            <span class="badge bg-danger">Rejected</span>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="2" class="ps-4"><strong>Total Hours:</strong></td>
                            <td colspan="3"><strong>@Model.Sum(e => e.Hours) hrs</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No time entries recorded for this project yet.
        </div>
    }
</div>
