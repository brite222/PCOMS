@model List<PCOMS.Models.Project>
@{
    ViewData["Title"] = "My Projects";

    var activeProjects = Model.Where(p => p.Status == PCOMS.Models.ProjectStatus.Active).ToList();
    var plannedProjects = Model.Where(p => p.Status == PCOMS.Models.ProjectStatus.Planned).ToList();
    var completedProjects = Model.Where(p => p.Status == PCOMS.Models.ProjectStatus.Completed).ToList();
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-1">
                <i class="bi bi-person-workspace text-primary"></i> My Projects
            </h2>
            <p class="text-muted">Projects you're currently assigned to</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-inbox text-muted" style="font-size: 5rem;"></i>
                        </div>
                        <h4 class="mb-3">No Projects Assigned Yet</h4>
                        <p class="text-muted mb-4">
                            You haven't been assigned to any projects yet. Contact your project manager to get started!
                        </p>
                        <div class="alert alert-info d-inline-block">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>What can you do?</strong><br>
                            Once assigned to projects, you'll be able to:
                            <ul class="text-start mt-2 mb-0">
                                <li>Track your time entries</li>
                                <li>Access project documents</li>
                                <li>View project details and deadlines</li>
                                <li>Collaborate with team members</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Statistics Row -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-folder2-open text-primary fs-4"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-0 small">Total Projects</h6>
                                <h2 class="mb-0 fw-bold">@Model.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-play-circle text-success fs-4"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-0 small">Active Projects</h6>
                                <h2 class="mb-0 fw-bold text-success">@activeProjects.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3 me-3">
                                <i class="bi bi-check-circle text-info fs-4"></i>
                            </div>
                            <div>
                                <h6 class="text-muted mb-0 small">Completed</h6>
                                <h2 class="mb-0 fw-bold text-info">@completedProjects.Count</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Projects -->
        @if (activeProjects.Any())
        {
            <h5 class="mb-3">
                <i class="bi bi-play-circle text-success me-2"></i>Active Projects
            </h5>
            <div class="row g-4 mb-5">
                @foreach (var project in activeProjects)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 hover-lift">
                            <div class="card-body">
                                <!-- Status Badge -->
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-success">
                                        <i class="bi bi-play-circle me-1"></i>Active
                                    </span>
                                    <span class="text-muted small">
                                        <i class="bi bi-currency-dollar"></i>₦@project.HourlyRate/hr
                                    </span>
                                </div>

                                <!-- Project Name -->
                                <h5 class="card-title mb-2">
                                    <i class="bi bi-folder text-primary me-2"></i>@project.Name
                                </h5>

                                <!-- Client Info -->
                                <p class="text-muted mb-3">
                                    <i class="bi bi-building me-1"></i>
                                    <strong>@project.Client.Name</strong>
                                </p>

                                <!-- Description -->
                                @if (!string.IsNullOrEmpty(project.Description))
                                {
                                    <p class="card-text text-muted small mb-3">
                                        @(project.Description.Length > 80
                                                                ? project.Description.Substring(0, 80) + "..."
                                                                : project.Description)
                    </p>
                                        }

                                <!-- Actions -->
                                <div class="d-grid gap-2">
                                    <a asp-controller="TimeEntries"
                                       asp-action="Project"
                                       asp-route-id="@project.Id"
                                       class="btn btn-primary">
                                        <i class="bi bi-clock-history me-2"></i>Log Time
                                    </a>
                                    <a asp-controller="Documents"
                                       asp-action="Index"
                                       asp-route-projectId="@project.Id"
                                       class="btn btn-outline-secondary">
                                        <i class="bi bi-file-earmark me-2"></i>Documents
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Planned Projects -->
        @if (plannedProjects.Any())
        {
            <h5 class="mb-3">
                <i class="bi bi-calendar text-secondary me-2"></i>Planned Projects
            </h5>
            <div class="row g-4 mb-5">
                @foreach (var project in plannedProjects)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-calendar me-1"></i>Planned
                                    </span>
                                    <span class="text-muted small">
                                        <i class="bi bi-currency-dollar"></i>₦@project.HourlyRate/hr
                                    </span>
                                </div>

                                <h5 class="card-title mb-2">
                                    <i class="bi bi-folder text-secondary me-2"></i>@project.Name
                                </h5>

                                <p class="text-muted mb-3">
                                    <i class="bi bi-building me-1"></i>
                                    <strong>@project.Client.Name</strong>
                                </p>

                                @if (!string.IsNullOrEmpty(project.Description))
                                {
                                    <p class="card-text text-muted small mb-3">
                                        @(project.Description.Length > 80
                                                                ? project.Description.Substring(0, 80) + "..."
                                                                : project.Description)
                    </p>
                                        }

                                <a asp-controller="Documents"
                                   asp-action="Index"
                                   asp-route-projectId="@project.Id"
                                   class="btn btn-outline-secondary w-100">
                                    <i class="bi bi-file-earmark me-2"></i>View Documents
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Completed Projects -->
        @if (completedProjects.Any())
        {
            <h5 class="mb-3">
                <i class="bi bi-check-circle text-info me-2"></i>Completed Projects
            </h5>
            <div class="row g-4">
                @foreach (var project in completedProjects)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card border-0 shadow-sm h-100 opacity-75">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <span class="badge bg-info">
                                        <i class="bi bi-check-circle me-1"></i>Completed
                                    </span>
                                    <span class="text-muted small">
                                        <i class="bi bi-currency-dollar"></i>₦@project.HourlyRate/hr
                                    </span>
                                </div>

                                <h5 class="card-title mb-2">
                                    <i class="bi bi-folder text-info me-2"></i>@project.Name
                                </h5>

                                <p class="text-muted mb-3">
                                    <i class="bi bi-building me-1"></i>
                                    <strong>@project.Client.Name</strong>
                                </p>

                                <a asp-controller="TimeEntries"
                                   asp-action="Project"
                                   asp-route-id="@project.Id"
                                   class="btn btn-outline-info w-100">
                                    <i class="bi bi-clock-history me-2"></i>View Time Logs
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<style>
    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .card {
        transition: all 0.2s ease;
    }
</style>
