@model List<PCOMS.Application.DTOs.ProjectDto>
@{
    ViewData["Title"] = "Client Projects";
    var clientId = ViewBag.ClientId;

    // Calculate statistics
    var totalProjects = Model.Count;
    var activeProjects = Model.Count(p => p.Status == "Active");
    var completedProjects = Model.Count(p => p.Status == "Completed");
    var plannedProjects = Model.Count(p => p.Status == "Planned");
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-folder-fill text-primary"></i> Projects
                    </h2>
                    <p class="text-muted mb-0">Manage all projects for this client</p>
                </div>
                <a asp-action="Create"
                   asp-route-clientId="@clientId"
                   class="btn btn-primary btn-lg shadow-sm">
                    <i class="bi bi-plus-circle"></i> Add New Project
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-folder2 text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 small">Total Projects</h6>
                            <h3 class="mb-0 fw-bold">@totalProjects</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-play-circle text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 small">Active</h6>
                            <h3 class="mb-0 fw-bold text-success">@activeProjects</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-check-circle text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 small">Completed</h6>
                            <h3 class="mb-0 fw-bold text-info">@completedProjects</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-secondary bg-opacity-10 rounded-circle p-3">
                                <i class="bi bi-calendar text-secondary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1 small">Planned</h6>
                            <h3 class="mb-0 fw-bold text-secondary">@plannedProjects</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Projects Table/Cards -->
    @if (!Model.Any())
    {
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-folder-x text-muted" style="font-size: 4rem;"></i>
                </div>
                <h5 class="text-muted mb-2">No Projects Yet</h5>
                <p class="text-muted mb-4">Get started by creating your first project for this client.</p>
                <a asp-action="Create"
                   asp-route-clientId="@clientId"
                   class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create First Project
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Quick Filters -->
        <div class="mb-3">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary active" onclick="filterProjects('all')">
                    All (@totalProjects)
                </button>
                <button type="button" class="btn btn-outline-success" onclick="filterProjects('Active')">
                    Active (@activeProjects)
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="filterProjects('Planned')">
                    Planned (@plannedProjects)
                </button>
                <button type="button" class="btn btn-outline-info" onclick="filterProjects('Completed')">
                    Completed (@completedProjects)
                </button>
            </div>
        </div>

        <!-- Projects Table -->
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 ps-4">
                                    <i class="bi bi-folder me-2"></i>Project Name
                                </th>
                                <th class="border-0">Status</th>
                                <th class="border-0">
                                    <i class="bi bi-person me-2"></i>Manager
                                </th>
                                <th class="border-0 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr class="project-row" data-status="@project.Status">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                                <i class="bi bi-folder-fill text-primary"></i>
                                            </div>
                                            <div>
                                                <strong class="d-block">@project.Name</strong>
                                                <small class="text-muted">ID: #@project.Id</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @switch (project.Status)
                                        {
                                            case "Active":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-play-circle me-1"></i>Active
                                                </span>
                                                break;
                                            case "Planned":
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-calendar me-1"></i>Planned
                                                </span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-info">
                                                    <i class="bi bi-check-circle me-1"></i>Completed
                                                </span>
                                                break;
                                            case "Archived":
                                                <span class="badge bg-dark">
                                                    <i class="bi bi-archive me-1"></i>Archived
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@project.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(project.ManagerName))
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="bg-secondary bg-opacity-10 rounded-circle p-2 me-2">
                                                    <i class="bi bi-person text-secondary"></i>
                                                </div>
                                                <span>@project.ManagerName</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit"
                                               asp-route-id="@project.Id"
                                               class="btn btn-outline-primary"
                                               title="Edit Project">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <a asp-controller="TimeEntries"
                                               asp-action="Project"
                                               asp-route-id="@project.Id"
                                               class="btn btn-outline-secondary"
                                               title="View Time Entries">
                                                <i class="bi bi-clock"></i>
                                            </a>
                                            <a asp-controller="Documents"
                                               asp-action="Index"
                                               asp-route-projectId="@project.Id"
                                               class="btn btn-outline-info"
                                               title="Project Documents">
                                                <i class="bi bi-file-earmark"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function filterProjects(status) {
            const rows = document.querySelectorAll('.project-row');
            const buttons = document.querySelectorAll('.btn-group button');

            // Update active button
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Filter rows
            rows.forEach(row => {
                if (status === 'all' || row.dataset.status === status) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
}

<style>
    .project-row {
        transition: all 0.2s ease;
    }

        .project-row:hover {
            background-color: rgba(13, 110, 253, 0.05);
            transform: translateX(5px);
        }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }
</style>
