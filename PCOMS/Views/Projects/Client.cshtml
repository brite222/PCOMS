@model List<PCOMS.Application.DTOs.ProjectDto>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="page-title">Projects</h2>

    <a asp-action="Create"
       asp-route-clientId="@ViewBag.ClientId"
       class="btn btn-primary">
        + Add Project
    </a>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Manager</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model)
                {
                    <tr>
                        <td>
                            <strong>@project.Name</strong>
                        </td>

                        <td>
                            <span class="badge
                                    @(project.Status == "Active" ? "bg-success" :
                                                                    project.Status == "Planned" ? "bg-secondary" :
                                                                    "bg-dark")">
                            @project.Status
                        </span>
                    </td>

                        <td>
                            @(project.ManagerName ?? "—")
                        </td>

                        <td class="text-end">
                            <a asp-action="Edit"
                               asp-route-id="@project.Id"
                               class="btn btn-sm btn-outline-primary">
                                Edit
                            </a>
                        </td>
                    </tr>
                                }
            </tbody>
        </table>
    </div>
</div>
