@model List<PCOMS.Models.Project>
@{
    ViewData["Title"] = "All Projects";

    // Statistics
    var totalProjects = Model.Count;
    var activeProjects = Model.Count(p => p.Status == PCOMS.Models.ProjectStatus.Active);
    var plannedProjects = Model.Count(p => p.Status == PCOMS.Models.ProjectStatus.Planned);
    var completedProjects = Model.Count(p => p.Status == PCOMS.Models.ProjectStatus.Completed);
    var archivedProjects = Model.Count(p => p.Status == PCOMS.Models.ProjectStatus.Archived);
    var totalHourlyRate = Model.Sum(p => p.HourlyRate);
}

<div class="container-fluid">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-kanban text-primary"></i> All Projects
                    </h2>
                    <p class="text-muted mb-0">Overview of all projects across clients</p>
                </div>
                <div class="btn-group">
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleView('cards')">
                        <i class="bi bi-grid-3x3-gap"></i> Cards
                    </button>
                    <button type="button" class="btn btn-outline-secondary active" onclick="toggleView('table')">
                        <i class="bi bi-table"></i> Table
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <!-- Empty State -->
        <div class="card border-0 shadow-sm">
            <div class="card-body text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-folder-x text-muted" style="font-size: 5rem;"></i>
                </div>
                <h4 class="mb-3">No Projects Yet</h4>
                <p class="text-muted mb-4">
                    Start by creating clients and then add projects to manage your work.
                </p>
                <a asp-controller="Clients" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-people me-2"></i>Go to Clients
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Statistics Dashboard -->
        <div class="row g-3 mb-4">
            <div class="col-md-2">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 d-inline-flex mb-2">
                            <i class="bi bi-folder2-open text-primary fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold">@totalProjects</h3>
                        <p class="text-muted small mb-0">Total</p>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="bg-success bg-opacity-10 rounded-circle p-3 d-inline-flex mb-2">
                            <i class="bi bi-play-circle text-success fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-success">@activeProjects</h3>
                        <p class="text-muted small mb-0">Active</p>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="bg-secondary bg-opacity-10 rounded-circle p-3 d-inline-flex mb-2">
                            <i class="bi bi-calendar text-secondary fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-secondary">@plannedProjects</h3>
                        <p class="text-muted small mb-0">Planned</p>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="bg-info bg-opacity-10 rounded-circle p-3 d-inline-flex mb-2">
                            <i class="bi bi-check-circle text-info fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-info">@completedProjects</h3>
                        <p class="text-muted small mb-0">Completed</p>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="bg-dark bg-opacity-10 rounded-circle p-3 d-inline-flex mb-2">
                            <i class="bi bi-archive text-dark fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold">@archivedProjects</h3>
                        <p class="text-muted small mb-0">Archived</p>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="bg-warning bg-opacity-10 rounded-circle p-3 d-inline-flex mb-2">
                            <i class="bi bi-currency-dollar text-warning fs-4"></i>
                        </div>
                        <h3 class="mb-0 fw-bold text-warning">₦@totalHourlyRate.ToString("N0")</h3>
                        <p class="text-muted small mb-0">Total/Hr</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filters -->
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="bi bi-search"></i>
                            </span>
                            <input type="text"
                                   id="searchInput"
                                   class="form-control"
                                   placeholder="Search projects or clients...">
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="btn-group w-100" role="group">
                            <button type="button" class="btn btn-outline-secondary active" onclick="filterStatus('all')">
                                All (@totalProjects)
                            </button>
                            <button type="button" class="btn btn-outline-success" onclick="filterStatus('Active')">
                                Active (@activeProjects)
                            </button>
                            <button type="button" class="btn btn-outline-secondary" onclick="filterStatus('Planned')">
                                Planned (@plannedProjects)
                            </button>
                            <button type="button" class="btn btn-outline-info" onclick="filterStatus('Completed')">
                                Completed (@completedProjects)
                            </button>
                            <button type="button" class="btn btn-outline-dark" onclick="filterStatus('Archived')">
                                Archived (@archivedProjects)
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Projects Grid (Cards View) -->
        <div id="cardsView" class="row g-4" style="display: none;">
            @foreach (var project in Model)
            {
                <div class="col-md-6 col-lg-4 project-card"
                     data-status="@project.Status"
                     data-name="@project.Name.ToLower()"
                     data-client="@project.Client.Name.ToLower()">
                    <div class="card border-0 shadow-sm h-100 hover-lift">
                        <div class="card-body d-flex flex-column">
                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                @switch (project.Status)
                                {
                                    case PCOMS.Models.ProjectStatus.Active:
                                        <span class="badge bg-success">
                                            <i class="bi bi-play-circle me-1"></i>Active
                                        </span>
                                        break;
                                    case PCOMS.Models.ProjectStatus.Planned:
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-calendar me-1"></i>Planned
                                        </span>
                                        break;
                                    case PCOMS.Models.ProjectStatus.Completed:
                                        <span class="badge bg-info">
                                            <i class="bi bi-check-circle me-1"></i>Completed
                                        </span>
                                        break;
                                    case PCOMS.Models.ProjectStatus.Archived:
                                        <span class="badge bg-dark">
                                            <i class="bi bi-archive me-1"></i>Archived
                                        </span>
                                        break;
                                }
                                <span class="text-muted small">₦@project.HourlyRate/hr</span>
                            </div>

                            <!-- Project Name -->
                            <h5 class="card-title mb-2">@project.Name</h5>

                            <!-- Client -->
                            <p class="text-muted mb-3">
                                <i class="bi bi-building me-1"></i>
                                <strong>@project.Client.Name</strong>
                            </p>

                            <!-- Description -->
                            @if (!string.IsNullOrEmpty(project.Description))
                            {
                                <p class="card-text text-muted small mb-3 flex-grow-1">
                                    @(project.Description.Length > 100
                                                            ? project.Description.Substring(0, 100) + "..."
                                                            : project.Description)
                    </p>
                                        }

                            <!-- Actions -->
                            <div class="mt-auto">
                                <div class="d-flex gap-2">
                                    <a asp-controller="Communication"
                                       asp-action="Chat"
                                       asp-route-projectId="@project.Id"
                                       class="btn btn-sm btn-outline-success flex-fill"
                                       title="Team Chat">
                                        <i class="bi bi-chat-dots"></i> Chat
                                    </a>
                                    <a asp-action="Edit"
                                       asp-route-id="@project.Id"
                                       class="btn btn-sm btn-outline-primary flex-fill">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-controller="TimeEntries"
                                       asp-action="Project"
                                       asp-route-id="@project.Id"
                                       class="btn btn-sm btn-outline-secondary flex-fill">
                                        <i class="bi bi-clock"></i> Time
                                    </a>
                                    <a asp-controller="Documents"
                                       asp-action="Index"
                                       asp-route-projectId="@project.Id"
                                       class="btn btn-sm btn-outline-info flex-fill">
                                        <i class="bi bi-file-earmark"></i> Docs
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Projects Table (Table View) -->
        <div id="tableView">
            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="border-0 ps-4">Project</th>
                                <th class="border-0">Client</th>
                                <th class="border-0">Status</th>
                                <th class="border-0">Rate</th>
                                <th class="border-0 text-end pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model)
                            {
                                <tr class="project-row"
                                    data-status="@project.Status"
                                    data-name="@project.Name.ToLower()"
                                    data-client="@project.Client.Name.ToLower()">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary bg-opacity-10 rounded p-2 me-3">
                                                <i class="bi bi-folder-fill text-primary"></i>
                                            </div>
                                            <div>
                                                <strong class="d-block">@project.Name</strong>
                                                @if (!string.IsNullOrEmpty(project.Description))
                                                {
                                                    <small class="text-muted">
                                                        @(project.Description.Length > 60
                                                                                                    ? project.Description.Substring(0, 60) + "..."
                                                                                                    : project.Description)
                                        </small>
                                                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="bi bi-building me-1 text-muted"></i>
                                        @project.Client.Name
                                    </td>
                                    <td>
                                        @switch (project.Status)
                                        {
                                            case PCOMS.Models.ProjectStatus.Active:
                                                <span class="badge bg-success">
                                                    <i class="bi bi-play-circle me-1"></i>Active
                                                </span>
                                                break;
                                            case PCOMS.Models.ProjectStatus.Planned:
                                                <span class="badge bg-secondary">
                                                    <i class="bi bi-calendar me-1"></i>Planned
                                                </span>
                                                break;
                                            case PCOMS.Models.ProjectStatus.Completed:
                                                <span class="badge bg-info">
                                                    <i class="bi bi-check-circle me-1"></i>Completed
                                                </span>
                                                break;
                                            case PCOMS.Models.ProjectStatus.Archived:
                                                <span class="badge bg-dark">
                                                    <i class="bi bi-archive me-1"></i>Archived
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <strong>₦@project.HourlyRate.ToString("N2")</strong>
                                        <small class="text-muted">/hour</small>
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Communication"
                                               asp-action="Chat"
                                               asp-route-projectId="@project.Id"
                                               class="btn btn-outline-success"
                                               title="Team Chat">
                                                <i class="bi bi-chat-dots"></i>
                                            </a>
                                            <a asp-action="Edit"
                                               asp-route-id="@project.Id"
                                               class="btn btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-controller="TimeEntries"
                                               asp-action="Project"
                                               asp-route-id="@project.Id"
                                               class="btn btn-outline-secondary">
                                                <i class="bi bi-clock"></i>
                                            </a>
                                            <a asp-controller="Documents"
                                               asp-action="Index"
                                               asp-route-projectId="@project.Id"
                                               class="btn btn-outline-info">
                                                <i class="bi bi-file-earmark"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Toggle between cards and table view
        function toggleView(view) {
            const cardsView = document.getElementById('cardsView');
            const tableView = document.getElementById('tableView');
            const buttons = document.querySelectorAll('.btn-group button');

            buttons.forEach(btn => btn.classList.remove('active'));

            if (view === 'cards') {
                cardsView.style.display = 'flex';
                tableView.style.display = 'none';
                buttons[0].classList.add('active');
            } else {
                cardsView.style.display = 'none';
                tableView.style.display = 'block';
                buttons[1].classList.add('active');
            }
        }

        // Filter by status
        function filterStatus(status) {
            const items = document.querySelectorAll('.project-row, .project-card');
            const buttons = document.querySelectorAll('.btn-group[role="group"] button');

            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            items.forEach(item => {
                if (status === 'all' || item.dataset.status === status) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        }

        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const search = e.target.value.toLowerCase();
            const items = document.querySelectorAll('.project-row, .project-card');

            items.forEach(item => {
                const name = item.dataset.name;
                const client = item.dataset.client;

                if (name.includes(search) || client.includes(search)) {
                    item.style.display = '';
                } else {
                    item.style.display = 'none';
                }
            });
        });
    </script>
}

<style>
    .hover-lift {
        transition: all 0.3s ease;
    }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

    .project-row {
        transition: all 0.2s ease;
    }

        .project-row:hover {
            background-color: rgba(13, 110, 253, 0.05);
            transform: translateX(5px);
        }

    .table > :not(caption) > * > * {
        padding: 1rem 0.75rem;
    }
</style>
