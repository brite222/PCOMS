@model List<PCOMS.Models.Project>

<h2>Projects</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Client</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Client?.Name</td>
                <td>@p.Status</td>
                <td>
                    <a asp-controller="Projects"
                       asp-action="Edit"
                       asp-route-id="@p.Id"
                       class="btn btn-sm btn-warning">
                        Edit
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
