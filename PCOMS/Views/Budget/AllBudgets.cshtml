@model IEnumerable<PCOMS.Application.Interfaces.DTOs.ProjectBudgetDto>

@{
    ViewData["Title"] = "All Project Budgets";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-10">
            <h2><i class="bi bi-cash-stack"></i> All Project Budgets</h2>
            <p class="text-muted">Overview of budgets across all projects</p>
        </div>
        <div class="col-md-2 text-end">
            <a href="@Url.Action("Index", "Projects")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Projects
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6>Total Projects</h6>
                        <h3>@Model.Count()</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6>Total Budgets</h6>
                        <h3>@Model.Sum(b => b.TotalBudget).ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h6>Total Spent</h6>
                        <h3>@Model.Sum(b => b.SpentAmount).ToString("C")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6>Total Remaining</h6>
                        <h3>@Model.Sum(b => b.RemainingAmount).ToString("C")</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Budgets Table -->
        <div class="card">
            <div class="card-header">
                <h5>Project Budget Details</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Project</th>
                                <th class="text-end">Total Budget</th>
                                <th class="text-end">Spent</th>
                                <th class="text-end">Remaining</th>
                                <th class="text-end">% Used</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var budget in Model.OrderByDescending(b => b.PercentageUsed))
                            {
                                <tr>
                                    <td>
                                        <strong>@budget.ProjectName</strong>
                                        <br />
                                        <small class="text-muted">by @budget.CreatedByName</small>
                                    </td>
                                    <td class="text-end">@budget.TotalBudget.ToString("C")</td>
                                    <td class="text-end">@budget.SpentAmount.ToString("C")</td>
                                    <td class="text-end">
                                        <span class="@(budget.RemainingAmount < 0 ? "text-danger" : "text-success")">
                                            @budget.RemainingAmount.ToString("C")
                                        </span>
                                    </td>
                                    <td class="text-end">
                                        <strong>@budget.PercentageUsed.ToString("F1")%</strong>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = budget.StatusColor switch
                                            {
                                                "danger" => "bg-danger",
                                                "warning" => "bg-warning text-dark",
                                                _ => "bg-success"
                                            };
                                        }
                                        <span class="badge @statusClass">
                                            @if (budget.PercentageUsed >= 100)
                                            {
                                                <text>Exceeded</text>
                                            }
                                            else if (budget.PercentageUsed >= 90)
                                            {
                                                <text>Critical</text>
                                            }
                                            else if (budget.PercentageUsed >= 75)
                                            {
                                                <text>Warning</text>
                                            }
                                            else
                                            {
                                                <text>On Track</text>
                                            }
                                        </span>
                                    </td>
                                    <td>@budget.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a href="@Url.Action("Index", new { projectId = budget.ProjectId })"
                                               class="btn btn-outline-primary" title="View Dashboard">
                                                <i class="bi bi-graph-up"></i>
                                            </a>
                                            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                            {
                                                <a href="@Url.Action("Edit", new { id = budget.Id })"
                                                   class="btn btn-outline-secondary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <th>TOTALS</th>
                                <th class="text-end">@Model.Sum(b => b.TotalBudget).ToString("C")</th>
                                <th class="text-end">@Model.Sum(b => b.SpentAmount).ToString("C")</th>
                                <th class="text-end">@Model.Sum(b => b.RemainingAmount).ToString("C")</th>
                                <th class="text-end">
                                    @{
                                        var totalBudget = Model.Sum(b => b.TotalBudget);
                                        var totalSpent = Model.Sum(b => b.SpentAmount);
                                        var overallPercentage = totalBudget > 0 ? (totalSpent / totalBudget * 100) : 0;
                                    }
                                    @overallPercentage.ToString("F1")%
                                </th>
                                <th colspan="3"></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <!-- Budget Status Distribution -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Budget Status Distribution</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="card bg-success text-white">
                                    <div class="card-body text-center">
                                        <h6>On Track</h6>
                                        <h3>@Model.Count(b => b.PercentageUsed < 75)</h3>
                                        <small>&lt; 75% used</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-warning text-dark">
                                    <div class="card-body text-center">
                                        <h6>Warning</h6>
                                        <h3>@Model.Count(b => b.PercentageUsed >= 75 && b.PercentageUsed < 90)</h3>
                                        <small>75-90% used</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-danger text-white">
                                    <div class="card-body text-center">
                                        <h6>Critical</h6>
                                        <h3>@Model.Count(b => b.PercentageUsed >= 90 && b.PercentageUsed < 100)</h3>
                                        <small>90-100% used</small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-dark text-white">
                                    <div class="card-body text-center">
                                        <h6>Exceeded</h6>
                                        <h3>@Model.Count(b => b.PercentageUsed >= 100)</h3>
                                        <small>&gt;100% used</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No project budgets have been created yet. <a href="@Url.Action("Index", "Projects")">Create a budget for a project</a>
        </div>
    }
</div>
