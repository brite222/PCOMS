@model PCOMS.Application.Interfaces.DTOs.CreateExpenseDto

@{
    ViewData["Title"] = "Submit Expense";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-receipt"></i> Submit Expense</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateExpense" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ProjectId" />

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description *</label>
                            <input asp-for="Description" class="form-control" required placeholder="e.g., Office supplies for Q1" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Category" class="form-label">Category *</label>
                                <select asp-for="Category" class="form-select" required>
                                    <option value="">Select Category</option>
                                    <option value="Labor">Labor</option>
                                    <option value="Materials">Materials</option>
                                    <option value="Equipment">Equipment</option>
                                    <option value="Software">Software</option>
                                    <option value="Travel">Travel</option>
                                    <option value="Meals">Meals</option>
                                    <option value="Lodging">Lodging</option>
                                    <option value="Consulting">Consulting</option>
                                    <option value="Licenses">Licenses</option>
                                    <option value="Subscriptions">Subscriptions</option>
                                    <option value="Marketing">Marketing</option>
                                    <option value="Training">Training</option>
                                    <option value="Office">Office</option>
                                    <option value="Utilities">Utilities</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Amount" class="form-label">Amount *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Amount" type="number" step="0.01" class="form-control" required />
                                </div>
                                <span asp-validation-for="Amount" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ExpenseDate" class="form-label">Expense Date *</label>
                                <input asp-for="ExpenseDate" type="date" class="form-control" required />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Vendor" class="form-label">Vendor/Supplier</label>
                                <input asp-for="Vendor" class="form-control" placeholder="e.g., Amazon, Staples" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReceiptNumber" class="form-label">Receipt/Invoice Number</label>
                            <input asp-for="ReceiptNumber" class="form-control" placeholder="e.g., INV-2025-001" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="ReceiptFile" class="form-label">Upload Receipt</label>
                            <input asp-for="ReceiptFile" type="file" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                            <div class="form-text">Accepted formats: PDF, JPG, PNG (Max 10MB)</div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsBillable" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsBillable" class="form-check-label">
                                    This expense is billable to the client
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input asp-for="IsReimbursable" class="form-check-input" type="checkbox" />
                                <label asp-for="IsReimbursable" class="form-check-label">
                                    This expense is reimbursable (paid out-of-pocket)
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Additional Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Any additional context or justification for this expense..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Expenses", new { projectId = Model.ProjectId })" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Submit Expense
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Expense Submission Tips -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-lightbulb"></i> Expense Submission Tips</h6>
                </div>
                <div class="card-body">
                    <ul>
                        <li><strong>Keep receipts:</strong> Always upload a receipt or invoice for verification</li>
                        <li><strong>Be specific:</strong> Provide detailed descriptions for faster approval</li>
                        <li><strong>Timely submission:</strong> Submit expenses within 30 days of purchase</li>
                        <li><strong>Correct category:</strong> Choose the most appropriate category</li>
                        <li><strong>Pre-approval:</strong> Large expenses (>$1000) should be pre-approved</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // File size validation
        document.querySelector('input[type="file"]').addEventListener('change', function() {
            if (this.files[0]) {
                const fileSize = this.files[0].size / 1024 / 1024; // in MB
                if (fileSize > 10) {
                    alert('File size exceeds 10MB. Please choose a smaller file.');
                    this.value = '';
                }
            }
        });
    </script>
}
