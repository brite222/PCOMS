@model IEnumerable<PCOMS.Application.Interfaces.DTOs.BudgetAlertDto>

@{
    ViewData["Title"] = "Budget Alerts";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="bi bi-exclamation-triangle"></i> Budget Alerts</h2>
            <p class="text-muted">Monitor budget threshold alerts and overspending warnings</p>
        </div>
    </div>

    if (Model.Any())
    {
        <!-- Active Alerts -->
        @{
            var activeAlerts = Model.Where(a => !a.IsAcknowledged).ToList();
        }

        @if (activeAlerts.Any())
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <h4>Active Alerts (@activeAlerts.Count)</h4>
                </div>
            </div>

            <div class="row">
                @foreach (var alert in activeAlerts)
                {
                    var alertClass = alert.AlertType switch
                    {
                        "Exceeded" => "danger",
                        "Critical" => "danger",
                        "Warning" => "warning",
                        _ => "info"
                    };

                    var iconClass = alert.AlertType switch
                    {
                        "Exceeded" => "bi-exclamation-octagon",
                        "Critical" => "bi-exclamation-triangle",
                        "Warning" => "bi-exclamation-circle",
                        _ => "bi-info-circle"
                    };

                    <div class="col-md-6 mb-3">
                        <div class="alert alert-@alertClass alert-dismissible">
                            <h5 class="alert-heading">
                                <i class="bi @iconClass"></i>
                                @alert.AlertType Alert - @alert.ProjectName
                            </h5>
                            <hr />
                            <p><strong>@alert.Message</strong></p>
                            <p class="mb-1">
                                <strong>Current Spending:</strong> @alert.CurrentAmount.ToString("C") 
                                (@alert.PercentageUsed.ToString("F1")% of budget)
                            </p>
                            <p class="mb-1">
                                <strong>Alert Triggered:</strong> @alert.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                            </p>
                            <hr />
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="@Url.Action("Index", new { projectId = alert.ProjectId })" class="btn btn-sm btn-outline-@alertClass">
                                    <i class="bi bi-graph-up"></i> View Budget
                                </a>
                                <form asp-action="AcknowledgeAlert" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@alert.Id" />
                                    <button type="submit" class="btn btn-sm btn-@alertClass">
                                        <i class="bi bi-check"></i> Acknowledge
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-success mb-4">
                <i class="bi bi-check-circle"></i>
                <strong>All clear!</strong> No active budget alerts at this time.
            </div>
        }

        <!-- Acknowledged Alerts -->
        @{
            var acknowledgedAlerts = Model.Where(a => a.IsAcknowledged).OrderByDescending(a => a.AcknowledgedAt).Take(10).ToList();
        }

        @if (acknowledgedAlerts.Any())
        {
            <div class="row mb-3">
                <div class="col-md-12">
                    <h4>Recently Acknowledged Alerts</h4>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Project</th>
                                    <th>Alert Type</th>
                                    <th>Message</th>
                                    <th>Amount</th>
                                    <th>Percentage</th>
                                    <th>Created</th>
                                    <th>Acknowledged</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var alert in acknowledgedAlerts)
                                {
                                    <tr>
                                        <td>@alert.ProjectName</td>
                                        <td>
                                            @{
                                                var badgeClass = alert.AlertType switch
                                                {
                                                    "Exceeded" => "bg-danger",
                                                    "Critical" => "bg-danger",
                                                    "Warning" => "bg-warning",
                                                    _ => "bg-info"
                                                };
                                            }
                                            <span class="badge @badgeClass">@alert.AlertType</span>
                                        </td>
                                        <td>@alert.Message</td>
                                        <td>@alert.CurrentAmount.ToString("C")</td>
                                        <td>@alert.PercentageUsed.ToString("F1")%</td>
                                        <td>@alert.CreatedAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <small>
                                                @alert.AcknowledgedAt?.ToString("MMM dd, yyyy")
                                            </small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No budget alerts found. This is good news - all project budgets are within normal ranges!
        </div>
    }

    <!-- Alert Information -->
    <div class="card mt-4">
        <div class="card-header">
            <h5><i class="bi bi-info-circle"></i> About Budget Alerts</h5>
        </div>
        <div class="card-body">
            <h6>Alert Types:</h6>
            <ul>
                <li><strong class="text-warning">Warning Alert (75%):</strong> Triggered when budget usage reaches the warning threshold (typically 75%). Time to monitor spending closely.</li>
                <li><strong class="text-danger">Critical Alert (90%):</strong> Triggered when budget usage reaches the critical threshold (typically 90%). Immediate action may be required.</li>
                <li><strong class="text-danger">Exceeded Alert (100%+):</strong> Budget has been exceeded. Review project scope and consider budget adjustment.</li>
            </ul>
            
            <h6 class="mt-3">Best Practices:</h6>
            <ul>
                <li>Acknowledge alerts promptly after reviewing</li>
                <li>Take corrective action when critical alerts appear</li>
                <li>Adjust budgets if project scope has changed</li>
                <li>Review expense patterns when warning alerts trigger</li>
                <li>Communicate budget status with stakeholders</li>
            </ul>
        </div>
    </div>
</div>
