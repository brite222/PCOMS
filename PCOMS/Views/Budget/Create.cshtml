@model PCOMS.Application.Interfaces.DTOs.CreateProjectBudgetDto

@{
    ViewData["Title"] = "Create Project Budget";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4><i class="bi bi-cash-stack"></i> Create Project Budget</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="ProjectId" />

                        <div class="mb-3">
                            <label asp-for="TotalBudget" class="form-label">Total Budget *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="TotalBudget" type="number" step="0.01" class="form-control" required />
                            </div>
                            <span asp-validation-for="TotalBudget" class="text-danger"></span>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Optional:</strong> Break down your budget by category. If not specified, the entire budget will be available for all categories.
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="LaborBudget" class="form-label">Labor Budget</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="LaborBudget" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MaterialBudget" class="form-label">Material Budget</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="MaterialBudget" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="OtherBudget" class="form-label">Other Budget</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="OtherBudget" type="number" step="0.01" class="form-control" />
                                </div>
                            </div>
                        </div>

                        <hr />

                        <h5>Alert Thresholds</h5>
                        <p class="text-muted">Set percentage thresholds for budget alerts</p>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="WarningThreshold" class="form-label">Warning Threshold</label>
                                <div class="input-group">
                                    <input asp-for="WarningThreshold" type="number" step="0.01" min="0" max="1" value="0.75" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">Default: 75% (0.75) - Yellow alert when budget reaches this level</div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CriticalThreshold" class="form-label">Critical Threshold</label>
                                <div class="input-group">
                                    <input asp-for="CriticalThreshold" type="number" step="0.01" min="0" max="1" value="0.90" class="form-control" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">Default: 90% (0.90) - Red alert when budget reaches this level</div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" placeholder="Budget notes, constraints, or special considerations..."></textarea>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Index", new { projectId = Model.ProjectId })" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check-circle"></i> Create Budget
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Budget Planning Tips -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="bi bi-lightbulb"></i> Budget Planning Tips</h6>
                </div>
                <div class="card-body">
                    <ul>
                        <li><strong>Labor:</strong> Include salaries, contractor fees, benefits</li>
                        <li><strong>Materials:</strong> Equipment, supplies, raw materials</li>
                        <li><strong>Other:</strong> Software, travel, training, overhead</li>
                        <li><strong>Add buffer:</strong> Consider 10-15% contingency for unexpected costs</li>
                        <li><strong>Review regularly:</strong> Monitor spending weekly or bi-weekly</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Auto-calculate breakdown validation
        document.querySelector('form').addEventListener('submit', function(e) {
            const total = parseFloat(document.querySelector('[name="TotalBudget"]').value) || 0;
            const labor = parseFloat(document.querySelector('[name="LaborBudget"]').value) || 0;
            const material = parseFloat(document.querySelector('[name="MaterialBudget"]').value) || 0;
            const other = parseFloat(document.querySelector('[name="OtherBudget"]').value) || 0;

            const breakdown = labor + material + other;

            if (breakdown > total) {
                e.preventDefault();
                alert('Budget breakdown (' + breakdown.toFixed(2) + ') exceeds total budget (' + total.toFixed(2) + ')');
            }
        });
    </script>
}
