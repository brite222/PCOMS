<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PCOMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed-width: 70px;
            --header-height: 60px;
            --primary-dark: #0f172a;
            --primary-darker: #1e293b;
            --accent-color: #3b82f6;
        }

        body {
            margin: 0;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }

        /* Top Header */
        .top-header {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: var(--header-height);
            background: linear-gradient(90deg, var(--primary-dark), var(--primary-darker));
            color: white;
            z-index: 1030;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .header-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: white;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-menu {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: rgba(255,255,255,0.9);
        }

        .sidebar-toggle {
            background: none;
            border: none;
            color: white;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            display: none;
        }

        /* Left Sidebar */
        .sidebar {
            position: fixed;
            top: var(--header-height);
            left: 0;
            width: var(--sidebar-width);
            height: calc(100vh - var(--header-height));
            background: white;
            border-right: 1px solid #e5e7eb;
            overflow-y: auto;
            transition: all 0.3s ease;
            z-index: 1020;
            box-shadow: 2px 0 8px rgba(0,0,0,0.05);
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed-width);
            }

        .sidebar-nav {
            list-style: none;
            padding: 1rem 0;
            margin: 0;
        }

        .nav-section-title {
            padding: 1rem 1.5rem 0.5rem;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
            color: #6b7280;
            letter-spacing: 0.05em;
        }

        .sidebar.collapsed .nav-section-title {
            display: none;
        }

        .nav-item {
            margin: 0.25rem 0.75rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            padding: 0.75rem 1rem;
            color: #374151;
            text-decoration: none;
            border-radius: 0.5rem;
            transition: all 0.2s;
            font-size: 0.95rem;
        }

            .nav-link:hover {
                background: #f3f4f6;
                color: var(--accent-color);
            }

            .nav-link.active {
                background: #dbeafe;
                color: var(--accent-color);
                font-weight: 500;
            }

            .nav-link i {
                font-size: 1.25rem;
                width: 1.5rem;
                text-align: center;
                flex-shrink: 0;
            }

        .nav-link-text {
            white-space: nowrap;
            overflow: hidden;
        }

        .sidebar.collapsed .nav-link-text {
            display: none;
        }

        .sidebar.collapsed .nav-link {
            justify-content: center;
            padding: 0.75rem;
        }

        /* Badge */
        .badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
            border-radius: 1rem;
        }

        .sidebar.collapsed .badge {
            display: none;
        }

        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            margin-top: var(--header-height);
            padding: 2rem;
            min-height: calc(100vh - var(--header-height));
            background: #f9fafb;
            transition: margin-left 0.3s ease;
        }

        .sidebar.collapsed + .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* Footer */
        footer {
            margin-left: var(--sidebar-width);
            transition: margin-left 0.3s ease;
            padding: 2rem;
            text-align: center;
            color: #6b7280;
            background: white;
            border-top: 1px solid #e5e7eb;
        }

        .sidebar.collapsed ~ footer {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .sidebar-toggle {
                display: block;
            }

            .sidebar {
                transform: translateX(-100%);
            }

                .sidebar.show {
                    transform: translateX(0);
                }

            .main-content {
                margin-left: 0;
            }

            footer {
                margin-left: 0;
            }
        }

        /* Scrollbar Styling */
        .sidebar::-webkit-scrollbar {
            width: 6px;
        }

        .sidebar::-webkit-scrollbar-track {
            background: #f1f1f1;
        }

        .sidebar::-webkit-scrollbar-thumb {
            background: #d1d5db;
            border-radius: 3px;
        }

            .sidebar::-webkit-scrollbar-thumb:hover {
                background: #9ca3af;
            }
    </style>
</head>
<body>

    <!-- Top Header -->
    <header class="top-header">
        <div class="d-flex align-items-center gap-3">
            <button class="sidebar-toggle" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <a class="header-brand" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-layers"></i>
                PCOMS
            </a>
        </div>

        <div class="header-right">
            <div class="dropdown">
                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-bell"></i>
                    <span class="badge bg-danger ms-1" id="notificationCount">0</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" asp-controller="Communication" asp-action="Notifications">View All Notifications</a></li>
                    <li><a class="dropdown-item" asp-controller="Communication" asp-action="Notifications" asp-route-unreadOnly="true">Unread Only</a></li>
                </ul>
            </div>

            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle"></i> @User.Identity!.Name
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="bi bi-person me-2"></i>My Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Logout</a></li>
                    </ul>
                </div>
            }
        </div>
    </header>

    <!-- Left Sidebar -->
    <aside class="sidebar" id="sidebar">
        <ul class="sidebar-nav">

            <!-- Main Section -->
            <li class="nav-section-title">Main</li>

            @if (User.IsInRole("Developer"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="My">
                        <i class="bi bi-speedometer2"></i>
                        <span class="nav-link-text">My Dashboard</span>
                    </a>
                </li>
            }
            else if (User.IsInRole("Client"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="ClientPortal" asp-action="Dashboard">
                        <i class="bi bi-speedometer2"></i>
                        <span class="nav-link-text">Dashboard</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="ClientPortal" asp-action="MyProjects">
                        <i class="bi bi-folder2-open"></i>
                        <span class="nav-link-text">My Projects</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="ClientPortal" asp-action="MyInvoices">
                        <i class="bi bi-receipt"></i>
                        <span class="nav-link-text">My Invoices</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="ClientPortal" asp-action="MyDocuments">
                        <i class="bi bi-file-earmark-text"></i>
                        <span class="nav-link-text">Documents</span>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span class="nav-link-text">Dashboard</span>
                    </a>
                </li>
            }

            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Clients" asp-action="Index">
                        <i class="bi bi-people"></i>
                        <span class="nav-link-text">Clients</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Projects" asp-action="Index">
                        <i class="bi bi-kanban"></i>
                        <span class="nav-link-text">Projects</span>
                    </a>
                </li>
            }

            @if (!User.IsInRole("Client"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Tasks" asp-action="Index">
                        <i class="bi bi-check2-square"></i>
                        <span class="nav-link-text">Tasks</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Documents" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span class="nav-link-text">Documents</span>
                    </a>
                </li>
            }

            <!-- Time & Billing -->
            @if (!User.IsInRole("Client"))
            {
                <li class="nav-section-title">Time & Billing</li>

                @if (User.IsInRole("Developer"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TimeEntries" asp-action="MyEntries">
                            <i class="bi bi-clock-history"></i>
                            <span class="nav-link-text">My Time (Simple)</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TimeTracking" asp-action="Index">
                            <i class="bi bi-stopwatch"></i>
                            <span class="nav-link-text">Time Tracking</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TimeTracking" asp-action="Timesheets">
                            <i class="bi bi-calendar-week"></i>
                            <span class="nav-link-text">Timesheets</span>
                        </a>
                    </li>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TimeEntries" asp-action="All">
                            <i class="bi bi-clock"></i>
                            <span class="nav-link-text">All Time Entries (Simple)</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TimeTracking" asp-action="PendingApprovals">
                            <i class="bi bi-check2-square"></i>
                            <span class="nav-link-text">Timesheet Approvals</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="TimeTracking" asp-action="Index">
                            <i class="bi bi-stopwatch"></i>
                            <span class="nav-link-text">Time Tracking</span>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Invoices" asp-action="Index">
                            <i class="bi bi-receipt"></i>
                            <span class="nav-link-text">Invoices</span>
                        </a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Budget" asp-action="Index">
                        <i class="bi bi-cash-stack"></i>
                        <span class="nav-link-text">Budgets</span>
                    </a>
                </li>
            }

            <!-- Communication -->
            <li class="nav-section-title">Communication</li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Projects" asp-action="Index">
                    <i class="bi bi-chat-dots"></i>
                    <span class="nav-link-text">Chat</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Communication" asp-action="Activity">
                    <i class="bi bi-activity"></i>
                    <span class="nav-link-text">Activity Feed</span>
                </a>
            </li>

            <!-- Analytics -->
            <li class="nav-section-title">Analytics</li>

            <li class="nav-item">
                <a class="nav-link" asp-controller="Reports" asp-action="Dashboard">
                    <i class="bi bi-graph-up"></i>
                    <span class="nav-link-text">Reports</span>
                </a>
            </li>

            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <li class="nav-item">
                    <a class="nav-link" asp-controller="AuditLogs" asp-action="Index">
                        <i class="bi bi-shield-check"></i>
                        <span class="nav-link-text">Audit Logs</span>
                    </a>
                </li>
            }

            <!-- Settings -->
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-section-title">Settings</li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="AdminUsers" asp-action="Index">
                        <i class="bi bi-person-gear"></i>
                        <span class="nav-link-text">User Management</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="ClientUserManagement" asp-action="Index">
                        <i class="bi bi-link-45deg"></i>
                        <span class="nav-link-text">Client Users</span>
                    </a>
                </li>
            }

        </ul>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <p class="mb-0">&copy; @DateTime.Now.Year PCOMS - Project & Client Operations Management System</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        // Sidebar Toggle
        const sidebar = document.getElementById('sidebar');
        const sidebarToggle = document.getElementById('sidebarToggle');

        sidebarToggle?.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });

        // Desktop sidebar collapse (double-click brand)
        document.querySelector('.header-brand')?.addEventListener('dblclick', () => {
            if (window.innerWidth > 768) {
                sidebar.classList.toggle('collapsed');
                localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
            }
        });

        // Remember sidebar state
        if (localStorage.getItem('sidebarCollapsed') === 'true' && window.innerWidth > 768) {
            sidebar.classList.add('collapsed');
        }

        // Active link highlighting
        const currentPath = window.location.pathname;
        document.querySelectorAll('.sidebar .nav-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('active');
            }
        });

        // Update notification count
        async function updateNotificationCount() {
            try {
                const response = await fetch('/Communication/GetUnreadCount');
                const data = await response.json();
                const badge = document.getElementById('notificationCount');
                badge.textContent = data.count || '0';
                if (data.count > 0) {
                    badge.classList.remove('d-none');
                } else {
                    badge.classList.add('d-none');
                }
            } catch (error) {
                console.log('Could not fetch notification count');
            }
        }

        // Update every 30 seconds
        updateNotificationCount();
        setInterval(updateNotificationCount, 30000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
