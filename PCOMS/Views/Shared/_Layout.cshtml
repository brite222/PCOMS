<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PCOMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Clients" asp-action="Index">PCOMS</a>

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Clients" asp-action="Index">Clients</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                            Dashboard
                        </a>
                    </li>

                    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Projects" asp-action="Index">
                                Projects
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Developer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TimeEntries" asp-action="MyEntries">
                                My Time
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Projects" asp-action="My">
                                My Projects
                            </a>
                        </li>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="TimeEntries" asp-action="All">
                                All Time
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AuditLogs" asp-action="Index">
                                Audit Logs
                            </a>
                        </li>
                    }

                    @* ✅ ADMIN USERS DROPDOWN — CORRECT PLACE *@
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               data-bs-toggle="dropdown"
                               href="#">
                                Users
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="AdminUsers"
                                       asp-action="Index">
                                        User List
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="AdminUsers"
                                       asp-action="Create">
                                        Create User
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                @User.Identity!.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 text-muted">
        <hr />
        <p>&copy; @DateTime.Now.Year - PCOMS</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
