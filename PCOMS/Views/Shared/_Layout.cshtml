<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - PCOMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm"
         style="background: linear-gradient(90deg, #0f172a, #1e293b);">

        <div class="container-fluid px-4">

            <!-- BRAND -->
            <a class="navbar-brand" asp-controller="Clients" asp-action="Index">
                PCOMS
            </a>

            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- LEFT NAV -->
                <ul class="navbar-nav me-auto">

                    <!-- CLIENTS -->
                    @if (User.IsInRole("Client"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="ClientPortal"
                               asp-action="Index">
                                My Projects
                            </a>
                        </li>
                    }


                    <!-- DASHBOARD (ROLE AWARE) -->
                    @if (User.IsInRole("Developer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Dashboard"
                               asp-action="My">
                                My Dashboard
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Dashboard"
                               asp-action="Index">
                                Dashboard
                            </a>
                        </li>
                    }

                    <!-- ADMIN / PROJECT MANAGER -->
                    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Projects"
                               asp-action="Index">
                                Projects
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="TimeEntries"
                               asp-action="All">
                                All Time
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="AuditLogs"
                               asp-action="Index">
                                Audit Logs
                            </a>
                        </li>
                    }

                    <!-- DEVELOPER -->
                    @if (User.IsInRole("Developer"))
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="TimeEntries"
                               asp-action="MyEntries">
                                My Time
                            </a>
                        </li>
                    }

                    <!-- ADMIN USERS -->
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle"
                               href="#"
                               role="button"
                               data-bs-toggle="dropdown">
                                Users
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="AdminUsers"
                                       asp-action="Index">
                                        User List
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item"
                                       asp-controller="AdminUsers"
                                       asp-action="Create">
                                        Create User
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                </ul>

                <!-- RIGHT NAV -->
                <ul class="navbar-nav">

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Account"
                               asp-action="Profile">
                                My Profile
                            </a>
                        </li>

                        <li class="nav-item">
                            <span class="navbar-text text-white-50 me-3">
                                👤 @User.Identity!.Name
                            </span>

                        </li>

                        <li class="nav-item">
                            <a class="nav-link"
                               asp-controller="Account"
                               asp-action="Logout">
                                Logout
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="text-center mt-5 text-muted">
        <hr />
        <p>&copy; @DateTime.Now.Year - PCOMS</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
