@model PCOMS.Application.DTOs.TaskDto
@{
    ViewData["Title"] = "Delete Task";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Task
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this task?
                    </div>

                    <h5>@Model.Title</h5>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p class="text-muted">@Model.Description</p>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Status:</dt>
                        <dd class="col-sm-8">@Model.StatusDisplay</dd>

                        <dt class="col-sm-4">Priority:</dt>
                        <dd class="col-sm-8">@Model.PriorityDisplay</dd>

                        <dt class="col-sm-4">Created:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Created By:</dt>
                        <dd class="col-sm-8">@Model.CreatedByName</dd>

                        @if (Model.SubTaskCount > 0)
                        {
                            <dt class="col-sm-4">Subtasks:</dt>
                            <dd class="col-sm-8 text-danger">
                                <strong>@Model.SubTaskCount subtasks will also be deleted!</strong>
                            </dd>
                        }

                        @if (Model.CommentCount > 0)
                        {
                            <dt class="col-sm-4">Comments:</dt>
                            <dd class="col-sm-8">@Model.CommentCount</dd>
                        }

                        @if (Model.AttachmentCount > 0)
                        {
                            <dt class="col-sm-4">Attachments:</dt>
                            <dd class="col-sm-8">@Model.AttachmentCount</dd>
                        }
                    </dl>

                    <hr />

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="TaskId" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@Model.TaskId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Task
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
