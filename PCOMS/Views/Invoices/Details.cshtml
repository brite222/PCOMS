@model PCOMS.Application.DTOs.InvoiceDto

@{
    ViewData["Title"] = $"Invoice {Model.InvoiceNumber}";
    var statusClass = Model.Status switch
    {
        "Paid" => "bg-success",
        "PartiallyPaid" => "bg-info",
        "Overdue" => "bg-danger",
        "Sent" => "bg-primary",
        "Draft" => "bg-secondary",
        _ => "bg-secondary"
    };
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                Invoice @Model.InvoiceNumber
                <span class="badge @statusClass ms-2">@Model.Status</span>
            </h2>
            <p class="text-muted">
                Client: <strong>@Model.ClientName</strong> |
                Project: <strong>@Model.ProjectName</strong>
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <a asp-action="Preview" asp-route-id="@Model.Id" class="btn btn-outline-primary" target="_blank">
                <i class="bi bi-printer"></i> Print
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Invoice Details -->
        <div class="col-lg-8">
            <!-- Invoice Info Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-info-circle"></i> Invoice Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Invoice Date:</dt>
                                <dd class="col-sm-7">@Model.InvoiceDate.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-5">Due Date:</dt>
                                <dd class="col-sm-7">
                                    @Model.DueDate.ToString("MMM dd, yyyy")
                                    @if (Model.IsOverdue)
                                    {
                                        <br />
                                        <span class="badge bg-danger">@Model.DaysOverdue days overdue</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Created By:</dt>
                                <dd class="col-sm-7">@Model.CreatedBy</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Tax Rate:</dt>
                                <dd class="col-sm-7">@Model.TaxRate%</dd>

                                @if (Model.IsRecurring)
                                {
                                    <dt class="col-sm-5">Recurring:</dt>
                                    <dd class="col-sm-7">
                                        @Model.RecurringFrequency
                                        @if (Model.NextRecurringDate.HasValue)
                                        {
                                            <br />
                                            <small>Next: @Model.NextRecurringDate.Value.ToString("MMM dd, yyyy")</small>
                                        }
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Line Items -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5><i class="bi bi-list-ul"></i> Invoice Items</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th class="text-end">Qty</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.InvoiceItems)
                                {
                                    <tr>
                                        <td>
                                            @item.Description
                                            @if (item.TimeEntryId.HasValue)
                                            {
                                                <br />
                                                <small class="text-muted">
                                                    <i class="bi bi-clock"></i> Time Entry
                                                </small>
                                            }
                                            @if (item.ExpenseId.HasValue)
                                            {
                                                <br />
                                                <small class="text-muted">
                                                    <i class="bi bi-receipt"></i> Expense
                                                </small>
                                            }
                                        </td>
                                        <td class="text-end">@item.Quantity</td>
                                        <td class="text-end">₦@item.UnitPrice.ToString("N2")</td>
                                        <td class="text-end"><strong>₦@item.Amount.ToString("N2")</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="3" class="text-end">Subtotal:</th>
                                    <th class="text-end">₦@Model.Subtotal.ToString("N2")</th>
                                </tr>
                                @if (Model.TaxAmount > 0)
                                {
                                    <tr>
                                        <th colspan="3" class="text-end">Tax (@Model.TaxRate%):</th>
                                        <th class="text-end">₦@Model.TaxAmount.ToString("N2")</th>
                                    </tr>
                                }
                                @if (Model.DiscountAmount > 0)
                                {
                                    <tr>
                                        <th colspan="3" class="text-end">Discount:</th>
                                        <th class="text-end text-success">-₦@Model.DiscountAmount.ToString("N2")</th>
                                    </tr>
                                }
                                <tr class="table-secondary">
                                    <th colspan="3" class="text-end">TOTAL:</th>
                                    <th class="text-end">₦@Model.TotalAmount.ToString("N2")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Notes & Terms -->
            @if (!string.IsNullOrEmpty(Model.Notes) || !string.IsNullOrEmpty(Model.Terms))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <h6>Notes:</h6>
                            <p>@Model.Notes</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Terms))
                        {
                            <h6>Terms:</h6>
                            <p>@Model.Terms</p>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Right Column: Payment & Actions -->
        <div class="col-lg-4">
            <!-- Payment Summary -->
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Payment Summary</h5>
                </div>
                <div class="card-body">
                    <dl>
                        <dt>Total Amount:</dt>
                        <dd><h4>₦@Model.TotalAmount.ToString("N2")</h4></dd>

                        <dt>Amount Paid:</dt>
                        <dd class="text-success"><h5>₦@Model.AmountPaid.ToString("N2")</h5></dd>

                        <dt>Balance Due:</dt>
                        <dd class="@(Model.Balance > 0 ? "text-danger" : "text-success")">
                            <h4><strong>₦@Model.Balance.ToString("N2")</strong></h4>
                        </dd>
                    </dl>

                    @if (Model.Balance > 0)
                    {
                        <hr />
                        <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#recordPaymentModal">
                            <i class="bi bi-plus-circle"></i> Record Payment
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-success mb-0">
                            <i class="bi bi-check-circle"></i> Fully Paid!
                        </div>
                    }
                </div>
            </div>

            <!-- Actions -->
            <div class="card mb-3">
                <div class="card-header">
                    <h6><i class="bi bi-lightning"></i> Actions</h6>
                </div>
                <div class="card-body">
                    @if (Model.Status == "Draft")
                    {
                        <form asp-action="Send" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-send"></i> Send to Client
                            </button>
                        </form>
                    }

                    @if (Model.Status != "Cancelled")
                    {
                        <form asp-action="Cancel" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-warning w-100 mb-2" onclick="return confirm('Cancel this invoice?')">
                                <i class="bi bi-x-circle"></i> Cancel Invoice
                            </button>
                        </form>
                    }

                    <a asp-action="Preview" asp-route-id="@Model.Id" class="btn btn-outline-secondary w-100 mb-2" target="_blank">
                        <i class="bi bi-printer"></i> Print/Download
                    </a>
                </div>
            </div>

            <!-- Payment History -->
            @if (Model.Payments.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h6><i class="bi bi-clock-history"></i> Payment History</h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach (var payment in Model.Payments.OrderByDescending(p => p.PaymentDate))
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between">
                                        <strong>₦@payment.Amount.ToString("N2")</strong>
                                        <small>@payment.PaymentDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    <small class="text-muted">
                                        @payment.PaymentMethod
                                        @if (!string.IsNullOrEmpty(payment.ReferenceNumber))
                                        {
                                            <text> - Ref: @payment.ReferenceNumber</text>
                                        }
                                    </small>
                                    @if (!string.IsNullOrEmpty(payment.Notes))
                                    {
                                        <br />
                                        <small>@payment.Notes</small>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Record Payment Modal -->
<div class="modal fade" id="recordPaymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="RecordPayment" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Record Payment</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="InvoiceId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">Amount *</label>
                        <div class="input-group">
                            <span class="input-group-text">₦</span>
                            <input type="number" name="Amount" step="0.01" max="@Model.Balance" class="form-control" required />
                        </div>
                        <small class="text-muted">Maximum: ₦@Model.Balance.ToString("N2")</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Payment Date *</label>
                        <input type="date" name="PaymentDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Payment Method *</label>
                        <select name="PaymentMethod" class="form-control" required>
                            <option value="Bank Transfer">Bank Transfer</option>
                            <option value="Cash">Cash</option>
                            <option value="Check">Check</option>
                            <option value="Card">Card</option>
                            <option value="Mobile Money">Mobile Money</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Reference Number</label>
                        <input type="text" name="ReferenceNumber" class="form-control" placeholder="Transaction ID, Check #, etc." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea name="Notes" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Record Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
