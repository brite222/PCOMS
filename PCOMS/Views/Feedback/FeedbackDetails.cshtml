@model PCOMS.Application.DTOs.ClientFeedbackDto

@{
    ViewData["Title"] = "Feedback Details";
}

<div class="container mt-4" style="max-width:900px">
    <!-- Back Button -->
    <div class="mb-3">
        <a asp-action="AllFeedback" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to All Feedback
        </a>
    </div>

    <!-- Feedback Card -->
    <div class="card shadow">
        <div class="card-header">
            @{
                var typeColor = Model.FeedbackType switch
                {
                    "Praise" => "success",
                    "Complaint" => "danger",
                    "Suggestion" => "info",
                    _ => "secondary"
                };

                var statusColor = Model.Status switch
                {
                    "New" => "warning",
                    "Acknowledged" => "info",
                    "Resolved" => "success",
                    _ => "secondary"
                };
            }

            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <span class="badge bg-@typeColor me-2">
                        @if (Model.FeedbackType == "Praise")
                        {
                            <i class="bi bi-hand-thumbs-up"></i>
                        }
                        else if (Model.FeedbackType == "Complaint")
                        {

                            <i class="bi bi-exclamation-circle"></i>
                        }
                        else if (Model.FeedbackType == "Suggestion")
                        {

                            <i class="bi bi-lightbulb"></i>
                        }
                        else
                        {

                            <i class="bi bi-chat-dots"></i>
                        }
                        @Model.FeedbackType
                    </span>
                    @Model.Subject
                </h4>
                <span class="badge bg-@statusColor fs-6">@Model.Status</span>
            </div>
        </div>

        <div class="card-body">
            <!-- Metadata -->
            <div class="row g-3 mb-4">
                <div class="col-md-3">
                    <small class="text-muted d-block">Client</small>
                    <strong>@Model.ClientName</strong>
                </div>
                @if (!string.IsNullOrEmpty(Model.ProjectName))
                {
                    <div class="col-md-3">
                        <small class="text-muted d-block">Project</small>
                        <strong>@Model.ProjectName</strong>
                    </div>
                }
                <div class="col-md-3">
                    <small class="text-muted d-block">Submitted</small>
                    <strong>@Model.SubmittedAt.ToString("MMM d, yyyy")</strong>
                </div>
                @if (Model.Rating.HasValue)
                {
                    <div class="col-md-3">
                        <small class="text-muted d-block">Rating</small>
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= Model.Rating ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                            }
                            <strong class="ms-1">@Model.Rating/5</strong>
                        </div>
                    </div>
                }
            </div>

            <!-- Feedback Text -->
            <div class="mb-4">
                <h6 class="text-muted">Feedback:</h6>
                <div class="border-start border-primary border-4 ps-3 py-2">
                    <p class="mb-0" style="white-space: pre-wrap;">@Model.FeedbackText</p>
                </div>
            </div>

            <!-- Response Section -->
            @if (!string.IsNullOrEmpty(Model.ResponseText))
            {
                <div class="border-top pt-4">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-reply text-primary"></i> Our Response
                    </h6>
                    <div class="bg-light p-3 rounded">
                        <p class="mb-2" style="white-space: pre-wrap;">@Model.ResponseText</p>
                        @if (Model.RespondedAt.HasValue)
                        {
                            <small class="text-muted">
                                <i class="bi bi-person"></i> @Model.RespondedByName
                                <span class="ms-2">
                                    <i class="bi bi-clock"></i> @Model.RespondedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")
                                </span>
                            </small>
                        }
                    </div>
                </div>
            }
            else if (Model.Status == "New" && User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
            {
                <!-- Response Form (Admin/PM only) -->
                <div class="border-top pt-4">
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-reply"></i> Respond to Feedback
                    </h6>
                    <form asp-action="RespondToFeedback" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="FeedbackId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Your Response *</label>
                            <textarea name="ResponseText" class="form-control" rows="5"
                                  placeholder="Write your response to the client..." required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Status *</label>
                            <select name="Status" class="form-select">
                                <option value="Acknowledged">Acknowledged</option>
                                <option value="Resolved" selected>Resolved</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="AllFeedback" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5">
                                <i class="bi bi-send"></i> Send Response
                            </button>
                        </div>
                    </form>
                </div>
            }
            else if (Model.Status == "New")
            {
                <div class="alert alert-info mt-4">
                    <i class="bi bi-hourglass-split"></i>
                    <strong>Pending Review:</strong> Our team will respond to this feedback soon.
                </div>
            }
        </div>

        <div class="card-footer text-muted d-flex justify-content-between align-items-center">
            <small>
                Feedback ID: #@Model.Id
            </small>
            @if (User.IsInRole("Admin"))
            {
                <form asp-action="DeleteFeedback" asp-route-id="@Model.Id" method="post"
                      onsubmit="return confirm('Are you sure you want to delete this feedback?');" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            }
        </div>
    </div>
</div>
